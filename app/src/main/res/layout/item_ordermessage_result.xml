<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:background="@color/bg_f0"

	>

	<TextView
		android:textColor="@color/font_black_46"
		android:textSize="16sp"
		android:gravity="center"
		android:layout_marginTop="10dp"
		android:id="@+id/tv_messagedate"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="2016-6-20"
		/>


	<com.flyco.roundview.RoundLinearLayout
		android:id="@+id/ll_hongbao"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:background="@color/white"
		android:orientation="vertical"
		app:rv_backgroundColor="@color/white"
		app:rv_cornerRadius="10dp"
		app:rv_strokeColor="#e1e1e1"
		app:rv_strokeWidth="1px">

		<TextView
			android:id="@+id/tv_title"
			style="@style/text_15_black_28"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:padding="12dp"
			android:paddingRight="5dp"
			android:text="消费流水凭证"
			android:textStyle="bold" />


		<TextView
			android:id="@+id/tv_orderdescription"
			style="@style/text_15_black_999"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginLeft="10dp"
			android:paddingRight="5dp"
			android:text="消费流水"
			android:textStyle="bold" />


		<TextView
			android:id="@+id/tv_orderprice"
			style="@style/text_30_black_28"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginBottom="20dp"
			android:layout_marginLeft="10dp"
			android:padding="15dp"
			android:paddingRight="5dp"
			android:text="￥1988"
			android:textStyle="bold" />


		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="35dp"
			android:gravity="center_vertical"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/tv_describe"
				style="@style/text_15_black_999"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:text="流水来源：" />

			<ImageView
				android:id="@+id/iv_headimage"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:layout_marginLeft="12dp"
				android:clickable="false"
				android:scaleType="centerCrop"
				android:src="@mipmap/user_icon"
				/>


			<TextView
				android:id="@+id/tv_orderfrom"
				style="@style/text_15_black_28"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="12dp"
				android:paddingRight="5dp"
				android:text="12345" />

		</LinearLayout>


		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="35dp"
			android:gravity="center_vertical"
			android:orientation="horizontal">

			<TextView
				style="@style/text_15_black_999"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:text="订单号码：" />

			<TextView
				android:id="@+id/tv_ordernum"
				style="@style/text_15_black_28"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="12dp"
				android:paddingRight="5dp"
				android:text="12345" />

		</LinearLayout>


		<View style="@style/divider1dp"></View>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:clickable="false"
			android:drawableRight="@mipmap/back_right_btn_mini"
			android:gravity="center_vertical|left"
			android:paddingLeft="10dp"
			android:text="查看详情"
			android:textColor="@color/normal_tab"
			android:textSize="14sp" />

	</com.flyco.roundview.RoundLinearLayout>


	<LinearLayout
		android:visibility="gone"
		android:id="@+id/ll_tuiguang"
		android:background="@color/white"
		android:layout_margin="10dp"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">


		    <ImageView
				android:layout_margin="10dp"
				android:clickable="false"
				android:scaleType="centerCrop"
				android:id="@+id/iv_news_icon"
		        android:layout_width="match_parent"
		        android:layout_height="100dp"/>

		    <TextView
				android:clickable="false"
				android:layout_marginLeft="10dp"
		        android:id="@+id/tv_messagecontent"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingRight="5dp"
				android:textColor="@color/font_black_28"
		        android:text="移动互联网时代，为什么大家关注创新设计比关注科技技术更多" />


			<TextView
				android:clickable="false"
				android:paddingLeft="10dp"
				android:gravity="center_vertical|left"
				android:text="查看更多"
				android:textColor="@color/normal_tab"
				android:textSize="14sp"
				android:drawableRight="@mipmap/back_right_btn_mini"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />
	</LinearLayout>

</LinearLayout>
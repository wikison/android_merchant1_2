<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="1.5px"
        android:layout_marginTop="1.5px"
        android:background="@drawable/ripple_item_clicked2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/j50dp"
            android:layout_height="@dimen/j50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/user_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv"
                style="@style/text_14_black_28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/tv_describe"
                style="@style/text_10_black_999"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:text="" />

            <TextView
                android:id="@+id/tv_num"
                style="@style/text_10_black_999"
                android:layout_marginTop="4dp"
                android:text="" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

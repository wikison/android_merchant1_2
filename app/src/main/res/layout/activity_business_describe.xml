<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.zemult.merchant.activity.mine.MerchantDescribeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_head"/>

        <TextView
            android:paddingLeft="12dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="商家简介"
            android:textColor="@color/font_black_333"
            android:textSize="@dimen/font_32px"/>



        <com.flyco.roundview.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="left"
            app:rv_strokeColor="#e5e5e5"
            app:rv_strokeWidth="1px"
            app:rv_cornerRadius="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_describe"
                android:padding="12dp"
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textColor="@color/font_black_333"
                android:textSize="@dimen/font_32px"
                android:hint="请输入商家简介"/>

        </com.flyco.roundview.RoundLinearLayout>


    </LinearLayout>

    <Button
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_commit"
        style="@style/common_btn_235"
        android:layout_marginBottom="75dp"
        android:text="完成"
        android:textColor="@color/font_fff"
        android:textSize="18dp" />

</RelativeLayout>

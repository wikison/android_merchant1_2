<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_add_role"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/j40dp"
            android:layout_height="@dimen/j40dp"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:src="@mipmap/tianjia_icon" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_12dp"
                android:text="斜杠角色"
                android:textColor="@color/font_black_333"
                android:textSize="@dimen/font_30px" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_12dp"
                android:text="有新的角色适合您，快去看看~~"
                android:textColor="@color/font_black_999"
                android:textSize="@dimen/font_24px" />

        </LinearLayout>


    </LinearLayout>
    <ImageView
        android:background="@color/bg_f0"
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@color/bg_f2"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_12dp"
            android:text="体验多重角色 · 探索多重职业 · 成就精彩人生"
            android:textColor="@color/font_black_999"
            android:textSize="@dimen/font_30px" />
    </LinearLayout>

</LinearLayout>
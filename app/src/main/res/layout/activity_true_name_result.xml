<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include
        android:id="@+id/layout_head"
        layout="@layout/layout_head"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@mipmap/check_btn_yes_relname"
        android:drawablePadding="20dp"
        android:gravity="center"
        android:text="已完成实名认证"/>


    <LinearLayout style="@style/binding_linearLayout">

        <TextView
            style="@style/text_15_black_28"
            android:layout_width="70dp"
            android:layout_marginLeft="12dp"
            android:text="姓名:"/>

        <TextView
            android:id="@+id/et_name"
            style="@style/text_15_black_28"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_12dp"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:text=""/>
    </LinearLayout>


    <View
        style="@style/divider_1px"
        android:layout_marginLeft="@dimen/margin_12dp"/>

    <LinearLayout style="@style/binding_linearLayout">

        <TextView
            style="@style/text_15_black_28"
            android:layout_width="70dp"
            android:layout_marginLeft="12dp"
            android:text="身份证号:"/>


        <TextView
            android:id="@+id/et_idnumber"
            style="@style/text_15_black_28"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_12dp"
            android:background="@null"
            android:gravity="right|center_vertical"/>
    </LinearLayout>

    <View
        style="@style/divider_1px"
        android:layout_marginLeft="@dimen/margin_12dp"/>

    <LinearLayout style="@style/binding_linearLayout">

        <TextView
            style="@style/text_15_black_28"
            android:layout_width="70dp"
            android:layout_marginLeft="12dp"
            android:text="手机号:"/>


        <TextView
            android:id="@+id/et_phone"
            style="@style/text_15_black_28"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_12dp"
            android:background="@null"
            android:gravity="right|center_vertical"/>
    </LinearLayout>

    <View
        style="@style/divider_1px"
        android:layout_marginLeft="@dimen/margin_12dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/bt_over"
            style="@style/common_btn_235"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/j40dp"
            android:text="@string/confirm"/>
    </RelativeLayout>
</LinearLayout>

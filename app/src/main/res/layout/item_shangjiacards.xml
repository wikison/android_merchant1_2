<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f2"
    android:orientation="vertical">

    <TextView
        android:id="@+id/createtime_tv"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="于....发布"
        android:textColor="@color/font_black_888"
        android:textSize="12sp" />


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@mipmap/quan_icon_one"
        card_view:cardBackgroundColor="@color/transparent"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="153dp">

            <ImageView
                android:id="@+id/background_iv"

                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="13dp"
                android:src="@mipmap/icon_launcher" />

            <TextView
                android:id="@+id/money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:text="20"
                android:textColor="#fff"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/money_tv"
                android:layout_below="@+id/money_tv"
                android:layout_marginTop="2dp"
                android:text="美食时刻"
                android:textColor="#fff"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_consume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="101dp"
                android:drawableLeft="@mipmap/yishi_icon"
                android:drawablePadding="5dp"
                android:text="消费满..."
                android:textColor="@color/font_black_666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_consume"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@mipmap/shijian_icon"
                android:drawablePadding="5dp"
                android:text="有效期至..."
                android:textColor="@color/font_black_666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/useNum_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_time"
                android:layout_marginRight="12dp"
                android:text="共50张"
                android:textColor="@color/font_black_666"
                android:textSize="12sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
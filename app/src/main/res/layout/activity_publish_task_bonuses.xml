<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bg_head_red">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/lh_btn_back"
                android:layout_width="@dimen/j44dp"
                android:layout_height="@dimen/j44dp"
                android:background="@drawable/btn_back"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:gravity="center_vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/jubao_icon_white" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="right|center_vertical"
            android:paddingRight="12dp"
            android:textColor="@color/white"
            android:textSize="@dimen/font_30px"
            android:visibility="gone" />


        <TextView
            android:id="@+id/lh_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/lh_btn_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:visibility="invisible" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_88px"
        android:layout_marginTop="@dimen/margin_24dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_bonuses_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:text="@string/bonuses_money_one"
            android:textColor="@color/font_black_333"
            android:textSize="@dimen/font_32px" />

        <TextView
            android:id="@+id/tv_yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_12dp"
            android:text="@string/yuan"
            android:textColor="@color/font_black_333"
            android:textSize="@dimen/font_32px" />

        <EditText
            android:id="@+id/et_bonuses_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/j6dp"
            android:layout_toLeftOf="@+id/tv_yuan"
            android:background="@null"
            android:digits="0123456789."
            android:hint="@string/input_money"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="9"
            android:textColor="@color/font_black_333"
            android:textSize="@dimen/font_32px" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_88px"
        android:layout_marginTop="@dimen/margin_24dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_bonuses_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:text="@string/bonuses_number"
            android:textColor="@color/font_black_333"
            android:textSize="@dimen/font_32px" />

        <ImageView
            android:id="@+id/iv_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/j6dp"
            android:layout_toRightOf="@+id/tv_bonuses_num"
            android:src="@mipmap/pin_icon"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_ge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_12dp"
            android:text="@string/ge"
            android:textColor="@color/font_black_333"
            android:textSize="@dimen/font_32px" />

        <EditText
            android:id="@+id/et_bonuses_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/j6dp"
            android:layout_toLeftOf="@+id/tv_ge"
            android:background="@null"
            android:digits="0123456789"
            android:hint="@string/input_number"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="@color/font_black_333"
            android:textSize="@dimen/font_32px" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="@dimen/margin_18dp">

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:gravity="center_vertical"
            android:text="@string/bonuses_money_hint1"
            android:textColor="@color/font_black_333"
            android:textSize="@dimen/font_24px" />

        <TextView
            android:id="@+id/tv_change_bonuses_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/tv_hint"
            android:clickable="true"
            android:gravity="center_vertical"
            android:text="@string/bonuses_money_change1"
            android:textColor="@color/font_8291b6"
            android:textSize="@dimen/font_24px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_18dp">

        <LinearLayout
            android:id="@+id/ll_bonuses_hand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_hand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_6dp"
                android:layout_toRightOf="@+id/cb_hand"
                android:gravity="center_vertical"
                android:text="@string/text_hand_bonuses"
                android:textColor="@color/font_black_333"
                android:textSize="@dimen/font_32px" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ll_bonuses_hand"
            android:layout_below="@+id/ll_bonuses_hand"
            android:layout_marginLeft="48dp"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/margin_12dp"
            android:text="@string/bonuses_hand_hint"
            android:textColor="@color/font_black_999"
            android:textSize="@dimen/font_24px" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_bonuses_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_24dp"
        android:gravity="center"
        android:text="ï¿¥0.00"
        android:textColor="@color/font_black_333"
        android:textSize="60sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.flyco.roundview.RoundTextView
            android:id="@+id/btn_publish_bonuses"
            style="@style/round_button_pink"
            android:layout_width="@dimen/common_btn_width_235"
            android:layout_height="@dimen/length_88px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/j48dp"
            android:text="@string/confirm"
            app:rv_backgroundColor="@color/btn_press_enable" />
    </RelativeLayout>

</LinearLayout>
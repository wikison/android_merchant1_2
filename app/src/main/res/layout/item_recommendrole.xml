<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/head_iv"
            android:layout_width="50dp"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/user_icon"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="美食管家"
            android:textSize="15sp"
            android:textColor="@color/font_black_28"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/head_iv" />

        <TextView
            android:id="@+id/note_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/name_tv"
            android:layout_below="@+id/name_tv"
            android:textSize="10sp"
            android:maxLines="1"
            android:layout_toLeftOf="@+id/go_btn"
            android:textColor="@color/font_black_999"
            android:layout_marginTop="2dp"
            android:text="爱好没事...." />

        <TextView
            android:id="@+id/others_tv"
            android:layout_width="wrap_content"
            android:layout_alignLeft="@+id/name_tv"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"

            android:textSize="10sp"
            android:textColor="@color/font_black_999"
            android:text="120人参与" />


        <Button
            android:id="@+id/go_btn"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:textSize="12sp"
            android:text="申请"

            android:background="@drawable/roleapply_btn"
            android:textColor="@color/bg_head"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />


    </RelativeLayout>


</LinearLayout>
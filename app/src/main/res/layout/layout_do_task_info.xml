<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="1px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_12dp">

            <ImageView
                android:id="@+id/iv_type_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/fengxiang_icon_big" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_type_icon"
                android:layout_marginLeft="@dimen/margin_12dp"
                android:layout_toRightOf="@+id/iv_type_icon"
                android:singleLine="true"
                android:textColor="@color/font_black_333"
                android:textSize="@dimen/font_30px" />

            <TextView
                android:id="@+id/tv_task_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_title"
                android:layout_below="@+id/tv_title"
                android:layout_marginTop="@dimen/margin_6dp"
                android:singleLine="true"
                android:textColor="@color/font_black_999"
                android:textSize="@dimen/font_28px" />

            <View
                android:id="@+id/divider1"
                style="@style/divider_1px"
                android:layout_alignLeft="@+id/tv_task_info"
                android:layout_below="@+id/tv_task_info"
                android:layout_marginTop="@dimen/margin_12dp" />

            <TextView
                android:id="@+id/tv_title_task_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider1"
                android:layout_marginTop="@dimen/margin_12dp"
                android:text="@string/task_describe"
                android:textColor="@color/font_black_333"
                android:textSize="@dimen/font_30px" />

            <TextView
                android:id="@+id/tv_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title_task_describe"
                android:layout_marginTop="@dimen/margin_6dp"
                android:textColor="@color/font_black_999"
                android:textSize="@dimen/font_28px" />

            <View
                android:id="@+id/divider2"
                style="@style/divider_1px"
                android:layout_below="@+id/tv_note"
                android:layout_marginTop="@dimen/margin_12dp" />

            <TextView
                android:id="@+id/tv_title_task_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider2"
                android:layout_marginTop="@dimen/margin_12dp"
                android:text="@string/task_reward"
                android:textColor="@color/font_black_333"
                android:textSize="@dimen/font_30px" />

            <TextView
                android:id="@+id/tv_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title_task_reward"
                android:layout_marginLeft="@dimen/margin_12dp"
                android:layout_marginTop="@dimen/margin_12dp"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/exp_icon"
                android:text="ddddddd"
                android:textColor="@color/font_black_999"
                android:textSize="@dimen/font_24px" />

            <TextView
                android:id="@+id/tv_bonuses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_exp"
                android:layout_below="@+id/tv_title_task_reward"
                android:layout_marginLeft="@dimen/j30dp"
                android:layout_toRightOf="@+id/tv_exp"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/money_icon"
                android:text="@string/text_bonuses"
                android:textColor="@color/font_black_999"
                android:textSize="@dimen/font_24px" />

            <TextView
                android:id="@+id/tv_voucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_exp"
                android:layout_below="@+id/tv_title_task_reward"
                android:layout_marginLeft="@dimen/j30dp"
                android:layout_toRightOf="@+id/tv_bonuses"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/daijingquan_icon"
                android:text="代金券"
                android:textColor="@color/font_black_999"
                android:textSize="@dimen/font_24px" />

            <View
                android:id="@+id/divider3"
                style="@style/divider_1px"
                android:layout_below="@+id/tv_exp"
                android:layout_marginTop="@dimen/margin_12dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/j45dp"
                android:layout_below="@+id/divider3"
                android:layout_marginTop="@dimen/margin_12dp">

                <ImageView
                    android:id="@+id/iv_publish_icon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_publish_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_12dp"
                    android:layout_toRightOf="@+id/iv_publish_icon"
                    android:text="周黑鸭 发布" />


                <TextView
                    android:id="@+id/tv_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_complaints"
                    android:text="举报"
                    />
                <ImageView
                    android:id="@+id/iv_complaints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/jubao_icon" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
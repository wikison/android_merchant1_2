<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_fff"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/margin_lr_12dp"
        android:layout_height="68dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_friend_head"
            android:layout_width="@dimen/length_88px"
            android:layout_height="@dimen/length_88px"
            android:layout_marginTop="@dimen/margin_12dp"
            android:src="@mipmap/add_friend_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:layout_marginRight="56dp"
            android:layout_toRightOf="@+id/iv_friend_head"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_friend_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_my_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="醋溜蛋"
                    android:textColor="@color/font_black_333"
                    android:textSize="@dimen/font_34px" />

                <ImageView
                    android:id="@+id/iv_friend_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_12dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_my_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_12dp"
                android:layout_marginTop="@dimen/margin_6dp"
                android:singleLine="true"
                android:text="记得加我哦"
                android:textColor="@color/font_black_666"
                android:textSize="@dimen/font_30px" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_add_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="等待验证"
            android:textColor="@color/font_black_bd"
            android:textSize="@dimen/font_26px"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_add_state"
            style="@style/common_btn_88"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="接受"
            android:textColor="@color/font_fff"
            android:textSize="@dimen/font_26px"
            android:visibility="invisible" />
    </RelativeLayout>
</LinearLayout>
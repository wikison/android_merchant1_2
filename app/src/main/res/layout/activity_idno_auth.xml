<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              tools:context="com.zemult.merchant.activity.mine.pwdsetting.IdnoAuthActivity">

    <include
        android:id="@+id/layout_head"
        layout="@layout/layout_head"/>

    <TextView
        style="@style/text_16_black_28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:drawablePadding="27dp"
        android:drawableTop="@mipmap/sheild_icon"
        android:gravity="center"
        android:text="请验证您真实认证信息"/>

    <LinearLayout
        style="@style/binding_linearLayout"
        android:layout_marginTop="46dp">

        <TextView
            style="@style/text_15_black_28"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="证件号码"/>


        <EditText
            android:id="@+id/et_idno"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:background="@null"
            android:digits="1234567890Xx"
            android:hint="请输入身份证后8位"
            android:maxLength="8"
            android:textColor="@color/font_black_28"
            android:textColorHint="@color/font_black_999"
            android:textSize="@dimen/font_30px"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/divider_c1"/>


    <Button
        android:id="@+id/btn_bangding"
        style="@style/text_18_white"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@drawable/common_selector_btn"
        android:text="确定"/>
</LinearLayout>

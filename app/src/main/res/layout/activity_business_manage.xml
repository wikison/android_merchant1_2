<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/include_layout_head"
        layout="@layout/layout_head"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/length_88px"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:gravity="center_vertical">


                    <TextView
                        style="@style/text_15_black_28"
                        android:layout_weight="1"
                        android:text="全称"/>

                    <TextView
                        style="@style/text_15_black_28"
                        android:id="@+id/tv_fullname"/>


                </LinearLayout>

                <View style="@style/divider_1px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="44dip"
                        android:background="@color/white"
                        android:gravity="center_vertical">




                        <TextView
                            style="@style/text_15_black_28"
                            android:layout_weight="1"
                            android:text="分类"/>

                        <TextView
                            style="@style/text_15_black_28"
                            android:id="@+id/tv_classify"/>


                    </LinearLayout>

                    <View style="@style/divider_1px" />


                    <LinearLayout
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="44dip"
                        android:background="@color/white"
                        android:gravity="center_vertical">


                        <TextView
                            style="@style/text_15_black_28"
                            android:layout_weight="1"
                            android:text="地址"/>

                        <TextView
                            style="@style/text_15_black_28"
                            android:id="@+id/tv_address"/>
                    </LinearLayout>

                    <View style="@style/divider_1px" />
                </LinearLayout>

                <View style="@style/divider10dp" />

                <View style="@style/divider_1px" />

                //相册

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_pic"
                    android:background="@drawable/ripple_item_clicked2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">


                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="相册"
                        android:textColor="@color/font_black_333"
                        android:textSize="@dimen/font_30px" />
                    <ImageView
                        android:scaleType="centerCrop"
                        android:visibility="invisible"
                        android:id="@+id/iv3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@color/bg_f2" />
                    <ImageView
                        android:scaleType="centerCrop"
                        android:visibility="invisible"
                        android:layout_marginLeft="12dp"
                        android:id="@+id/iv2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@color/bg_f2" />
                    <ImageView
                        android:scaleType="centerCrop"
                        android:visibility="invisible"
                        android:layout_marginLeft="12dp"
                        android:id="@+id/iv1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@color/bg_f2" />
                    <ImageView
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="matrix"
                        android:src="@mipmap/right_btn" />
                </LinearLayout>

                <!--<View-->
                    <!--style="@style/divider" />-->

                <!--<View-->
                    <!--style="@style/divider12dp" />-->
                <!--<View-->
                    <!--style="@style/divider" />-->



                //佣金 电话

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dip"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:background="@color/white"
                    android:gravity="center_vertical">


                    <TextView
                        style="@style/text_15_black_28"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:text="联系电话"/>

                    <TextView
                        style="@style/text_15_black_28"
                        android:id="@+id/tv_tel"/>
                </LinearLayout>



                <View style="@style/divider_1px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dip"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:background="@color/white"
                    android:gravity="center_vertical">


                    <TextView
                        style="@style/text_15_black_28"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:text="入账账号"/>

                    <TextView
                        style="@style/text_15_black_28"
                        android:id="@+id/tv_account"/>

                </LinearLayout>

                <View style="@style/divider_1px" />


            </LinearLayout>




        </LinearLayout>
    </ScrollView>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_fff"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/margin_lr_12dp"
        android:layout_height="68dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_follow_head"
            android:layout_width="@dimen/length_88px"
            android:layout_height="@dimen/length_88px"
            android:layout_marginTop="@dimen/margin_12dp"
            android:src="@mipmap/user_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:layout_marginRight="56dp"
            android:layout_toRightOf="@+id/iv_follow_head"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_follow_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_follow_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="醋溜蛋"
                    android:textColor="@color/font_black_333"
                    android:textSize="@dimen/font_24px" />

                <ImageView
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_sex"
                    android:src="@mipmap/man_icon"/>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_describe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_12dp"
                android:layout_marginTop="@dimen/margin_6dp"
                android:singleLine="true"
                android:text="这个人很懒，啥也没说"
                android:textColor="@color/font_black_999"
                android:textSize="@dimen/font_22px" />
        </LinearLayout>




        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_state"
                android:src="@mipmap/tianjiaguanzhu_icon"/>

            <TextView
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_18px"
                android:textColor="@color/bg_head"
                android:text="@string/marked" />

        </LinearLayout>


    </RelativeLayout>

    <View style="@style/divider" />
</LinearLayout>
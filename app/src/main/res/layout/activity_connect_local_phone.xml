<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_head"/>

    <ImageView
        android:layout_marginTop="62dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/tongxunlu_icon"/>

    <TextView
        style="@style/text_30_2828"
        android:gravity="center"
        android:layout_marginTop="53dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关联通讯录可以让更多你曾今的客户\n找到你，为TA服务。"
        />

    <TextView
        android:layout_weight="1"
        style="@style/text_30_2828"
        android:gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="需要获取通讯录权限，请在手机权限管理中设置。"
        />

    <Button
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/btn_next"
        android:layout_width="@dimen/common_btn_width_235"
        android:layout_height="@dimen/common_btn_height_35"
        android:layout_marginBottom="64dp"
        android:background="@drawable/common_selector_btn"
        android:text="关联通讯录"
        android:textColor="@color/white"
        android:textSize="18sp"/>

</LinearLayout>

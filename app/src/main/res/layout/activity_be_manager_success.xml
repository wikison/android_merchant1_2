<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@id/ll_root"
    >

    <include layout="@layout/layout_head"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/beijing">


        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="120dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/user_icon"/>
            
            <TextView
                android:layout_marginTop="12dp"
                style="@style/text_15_black_28"
                android:text="恭喜您成为"
                android:textColor="#ff6724"
                android:textSize="@dimen/font_36px"/>

            <TextView
                android:gravity="center"
                android:id="@+id/tv_name"
                android:layout_marginTop="6dp"
                style="@style/text_15_black_28"
                android:layout_width="220dp"
                android:textColor="#ff6724"
                android:textSize="@dimen/font_36px"/>

            <TextView
                android:layout_marginTop="6dp"
                style="@style/text_15_black_28"
                android:text="的服务管家。"
                android:textColor="#ff6724"
                android:textSize="@dimen/font_36px"/>





        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="60dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/text_15_black_28"
                    android:layout_marginTop="55dp"
                    android:text="重要提示"
                    android:textColor="#ff6724"
                    android:textSize="@dimen/font_30px" />

                <TextView
                    style="@style/text_15_black_28"
                    android:layout_marginTop="13dp"
                    android:gravity="center"
                    android:text="为了能及时收到客户的需求信息,\n需要获取通讯录权限，\n请在手机权限管理中设置。"
                    android:textColor="#ff6724"
                    android:textSize="@dimen/font_24px" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <Button
                        android:id="@+id/btn_share"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/common_btn_height_35"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/common_selector_btn_red"
                        android:gravity="center"
                        android:text="分享给好友"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/btn_ok"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/common_btn_height_35"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="35dp"
                        android:layout_weight="1"
                        android:background="@drawable/common_selector_btn_red"
                        android:gravity="center"
                        android:text="完成"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>

</LinearLayout>

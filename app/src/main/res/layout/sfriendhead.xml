<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_new_friend"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_new_friend"
            android:layout_width="@dimen/j40dp"
            android:layout_height="@dimen/j40dp"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:src="@mipmap/add_friend_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:text="@string/new_friend"
            android:textColor="@color/font_black_333"
            android:textSize="@dimen/font_30px" />
    </LinearLayout>
    <ImageView
        android:background="@color/bg_f0"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:id="@+id/ll_tribe"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_tribe"
            android:layout_width="@dimen/j40dp"
            android:layout_height="@dimen/j40dp"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:src="@mipmap/qunzu_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:text="群聊"
            android:textColor="@color/font_black_333"
            android:textSize="@dimen/font_30px" />
    </LinearLayout>

</LinearLayout>
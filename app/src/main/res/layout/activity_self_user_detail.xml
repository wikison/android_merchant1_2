<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f2"
    android:orientation="vertical">

    <include
        android:id="@+id/include_layout_head"
        layout="@layout/layout_head"/>

    <com.zemult.merchant.view.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    style="@style/relative_layout_item">

                    <ImageView
                        android:id="@+id/iv_head"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:background="@color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/user_icon"/>


                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/text_15_black_28"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_16dp"
                        android:layout_toRightOf="@+id/iv_head"
                        android:ellipsize="end"
                        android:maxEms="6"
                        android:maxLines="1"
                        android:text=""/>

                    <TextView
                        android:id="@+id/tv_focus"
                        style="@style/text_12_black_28"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_16dp"
                        android:layout_toRightOf="@+id/tv_name"
                        android:text="-客户关注"
                        android:textColor="@color/font_new_red"/>

                    <TextView
                        android:id="@+id/tv_add_fan"
                        style="@style/text_12_black_28"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_16dp"
                        android:layout_toRightOf="@+id/tv_focus"
                        android:text="@string/how_add_focus"
                        android:textColor="@color/font_new_blue"/>

                    <TextView
                        style="@style/text_12_black_28"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/margin_16dp"
                        android:drawablePadding="@dimen/margin_8dp"
                        android:drawableRight="@mipmap/right_btn"
                        android:text=""/>
                </RelativeLayout>

                <View style="@style/divider_dash"/>

                <RelativeLayout
                    style="@style/relative_layout_item">


                    <TextView
                        android:id="@+id/tv_text_state"
                        style="@style/text_15_black_28"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:text="状态"/>

                    <ImageView
                        android:id="@+id/iv_state"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="4dp"
                        android:layout_toLeftOf="@+id/tv_state"
                        android:src="@mipmap/manglu"/>

                    <TextView
                        android:id="@+id/tv_state"
                        style="@style/text_15_black_28"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="8dp"
                        android:drawableRight="@mipmap/sanjiao_icon"
                        android:text="忙碌"/>

                </RelativeLayout>

                <View style="@style/divider_dash"/>

                <RelativeLayout
                    style="@style/relative_layout_item">


                    <TextView
                        android:id="@+id/tv_text_level"
                        style="@style/text_15_black_28"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:text="等级"/>

                    <TextView
                        android:id="@+id/tv_add_level"
                        style="@style/text_12_black_28"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_16dp"
                        android:layout_toRightOf="@+id/tv_text_level"
                        android:text="@string/how_add_level"
                        android:textColor="@color/font_new_blue"/>


                    <TextView
                        android:id="@+id/tv_level"
                        style="@style/text_15_black_28"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/iv_level"
                        android:drawablePadding="4dp"
                        android:text=""
                        android:textColor="@color/font_main"/>

                    <ImageView
                        android:id="@+id/iv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="4dp"
                        android:src="@mipmap/right_btn"/>
                </RelativeLayout>

                <View style="@style/divider_dash"/>

                <RelativeLayout
                    style="@style/relative_layout_item">


                    <TextView
                        android:id="@+id/tv_text_account"
                        style="@style/text_15_black_28"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:text="收益账户"/>

                    <TextView
                        android:id="@+id/tv_add_money"
                        style="@style/text_12_black_28"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_16dp"
                        android:layout_toRightOf="@+id/tv_text_account"
                        android:text="@string/how_add_moeny"
                        android:textColor="@color/font_new_blue"/>

                    <TextView
                        android:id="@+id/tv_account"
                        style="@style/text_15_black_28"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="8dp"
                        android:drawableRight="@mipmap/right_btn"
                        android:text="￥1222元"
                        android:textColor="@color/font_black_999"/>

                </RelativeLayout>

                <View style="@style/divider_dash"/>

                <RelativeLayout
                    style="@style/relative_layout_item">


                    <TextView
                        android:id="@+id/tv_text_scrm"
                        style="@style/text_15_black_28"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:text="SCRM"/>

                    <com.zemult.merchant.view.FixedGridView
                        android:id="@+id/fgv_scrm"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/tv_scrm"
                        android:layout_toRightOf="@+id/tv_text_scrm">

                    </com.zemult.merchant.view.FixedGridView>

                    <TextView
                        android:id="@+id/tv_scrm"
                        style="@style/text_15_black_28"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="8dp"
                        android:drawableRight="@mipmap/right_btn"/>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_weight="1"
                android:background="@color/bg_f2"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/bg_f2">

                    <ImageView
                        android:id="@+id/iv_cover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>

                    <RelativeLayout
                        android:id="@+id/rl_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <me.crosswall.lib.coverflow.core.LinkagePagerContainer
                            android:id="@+id/pager_container"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:layout_centerVertical="true">

                            <android.support.v4.view.LinkagePager
                                android:layout_width="145dp"
                                android:layout_height="75dp"
                                android:layout_gravity="center"/>
                        </me.crosswall.lib.coverflow.core.LinkagePagerContainer>

                        <ImageView
                            android:id="@+id/iv_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/sanjiao"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/ll_add"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iv_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="35dp"
                            android:src="@mipmap/bg_add_merchant"/>
                    </LinearLayout>
                </FrameLayout>

                <android.support.v4.view.LinkagePager
                    android:id="@+id/bind_pager"
                    android:layout_width="match_parent"
                    android:layout_height="490dp"/>

            </LinearLayout>


        </LinearLayout>

    </com.zemult.merchant.view.BounceScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_f2"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">


        <Button
            android:id="@+id/btn_service"
            style="@style/common_btn_235"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_btn_height_35"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="@dimen/j35dp"
            android:layout_marginRight="@dimen/j35dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:clickable="true"
            android:gravity="center"
            android:text="发起服务订单"
            android:textColor="@color/white"
            android:textSize="@dimen/font_36px"
            android:visibility="visible"/>

    </LinearLayout>
</LinearLayout>
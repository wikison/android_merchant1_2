<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        card_view:cardBackgroundColor="@color/transparent"
        android:layout_height="153dp"
        android:background="@mipmap/quan_icon_one"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="153dp">
                <ImageView
                    android:id="@+id/background_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="13dp"
                    android:src="@mipmap/icon_launcher"/>

                <TextView
                    android:id="@+id/money_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="36sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="12dp"
                    android:textColor="#fff"
                    android:text="20"/>

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="美食时刻"
                    android:layout_below="@+id/money_tv"
                    android:layout_alignRight="@+id/money_tv"
                    android:layout_marginTop="4dp"
                    android:textColor="#fff"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_consume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="101dp"
                    android:layout_marginLeft="12dp"
                    android:drawablePadding="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/font_black_666"
                    android:drawableLeft="@mipmap/yishi_icon"
                    android:text="消费满..."/>
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_consume"
                    android:layout_marginLeft="12dp"
                    android:drawablePadding="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/font_black_666"
                    android:drawableLeft="@mipmap/shijian_icon"
                    android:layout_marginTop="8dp"
                    android:text="有效期至..."/>


                <ImageView
                    android:id="@+id/status_iv"

                    android:layout_marginTop="400dp"

                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/ripple_item_clicked2"
    android:clickable="true"
    android:id="@+id/ll_content"
    >

    <LinearLayout
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/user_icon" />


        <TextView
            android:layout_marginLeft="12dp"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_black_46"
            android:textSize="@dimen/font_28px"
            android:text="ddddddddddddddddddddddddddddddd"/>

    </LinearLayout>


    <TextView
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="ddddd"
        android:id="@+id/tv_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/font_black_46"
        android:textSize="@dimen/font_28px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_black_999"
            android:textSize="@dimen/font_28px"
            android:text="ss"/>

        <LinearLayout
            android:id="@+id/ll_zan"
            android:padding="12dp"
            android:gravity="center_vertical|right"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_zan"
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/zan_icon"/>

            <TextView
                android:id="@+id/tv_zan_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_black_999"
                android:textSize="@dimen/font_28px"
                android:text="ss"/>
        </LinearLayout>


    </RelativeLayout>

    <View
        android:id="@+id/divider_common"
        android:layout_marginLeft="12dp"
        style="@style/divider"/>
    <View
        android:id="@+id/divider_bottom"
        style="@style/divider" />


</LinearLayout>


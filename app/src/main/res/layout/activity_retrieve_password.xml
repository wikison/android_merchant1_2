<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zemult.merchant.activity.mine.RetrievePasswordActivity">
    <include
        android:id="@+id/layout_head"
        layout="@layout/layout_head" />


    <TextView
        android:padding="8dp"
        android:gravity="center_vertical|left"
        android:id="@+id/tv_message"
        style="@style/text_14_black_666"
        android:layout_gravity="center_horizontal"
        android:text="正在为158重置支付密码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        style="@style/binding_linearLayout">

        <TextView
            android:gravity="center"
            style="@style/text_16_black_666"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:text="姓名" />


        <EditText
            android:gravity="center_vertical"
            android:text=""
            android:layout_marginLeft="15dp"
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColorHint="#bfbfbf"
            android:textColor="#000000"
            android:hint="请输入真实姓名"/>
    </LinearLayout>
    <View
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_c1"/>

    <LinearLayout
        style="@style/binding_linearLayout">

        <TextView
            android:gravity="center"
            style="@style/text_16_black_666"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:text="证件号" />


        <EditText
            android:gravity="center_vertical"
            android:text=""
            android:layout_marginLeft="15dp"
            android:id="@+id/et_idnumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColorHint="#bfbfbf"
            android:textColor="#000000"
            android:hint="请输入身份证号码"/>
    </LinearLayout>
    <View
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_c1"/>

    <LinearLayout
        style="@style/binding_linearLayout">

        <TextView
            android:gravity="center"
            android:id="@+id/tv_sendcode"
            style="@style/text_16_black_666"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_head"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:text="获取验证码" />


        <EditText
            android:layout_marginLeft="15dp"
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColorHint="#bfbfbf"
            android:textColor="#000000"
            android:hint="请输入您的手机验证码"/>
    </LinearLayout>

    <View
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_c1"/>

    <Button
        android:layout_marginTop="30dp"
        style="@style/btn_common_orange"
        android:layout_gravity="center_horizontal"
        android:text="下一步"
        android:id="@+id/btn_next" />

</LinearLayout>

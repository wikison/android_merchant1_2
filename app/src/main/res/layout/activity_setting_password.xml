<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.mine.RsettingPasswordActivity">

    <include
        android:id="@+id/include_layout_head"
        layout="@layout/layout_head"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <RelativeLayout
        style="@style/binding_linearLayout"
        android:layout_marginTop="60dp">

        <EditText
            android:id="@+id/et_newpassword"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@null"
            android:digits="@string/password_match"
            android:drawableBottom="@drawable/selector_drawable_line"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:textColor="#bfbfbf"
            android:textSize="16sp" />

    </RelativeLayout>


    <RelativeLayout style="@style/binding_linearLayout">

        <EditText
            android:id="@+id/et_renewpassword"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@null"
            android:digits="@string/password_match"
            android:drawableBottom="@drawable/selector_drawable_line"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:textColor="#bfbfbf"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="*密码长度6~20位,设置密码的格式不能是纯密码数字"
            android:textColor="#868686"
            android:textSize="12sp" />

        <Button
            android:id="@+id/submit"
            android:layout_width="235dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:background="@drawable/next_bg_btn_ban"
            android:clickable="false"
            android:onClick="submit"
            android:text="确认提交"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>


</LinearLayout>

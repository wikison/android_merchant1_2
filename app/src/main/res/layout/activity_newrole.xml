<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f2"
    android:orientation="vertical">


    <include
        android:id="@+id/include_layout_head"
        layout="@layout/layout_head"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/new_role"
        android:textColor="#e84f41"
        android:textSize="12sp" />



        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="角色名称"
            android:layout_marginTop="30dp"
            android:textColor="@color/font_black_333"
            android:textSize="@dimen/font_30px" />

        <EditText
            android:id="@+id/newrole_name_et"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/tv1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/newrole_edit"
            android:hint="请输入名称"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="@color/font_black_999"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="角色行业"
            android:layout_marginTop="12dp"
            android:textColor="@color/font_black_333"
            android:textSize="@dimen/font_30px" />

        <EditText
            android:id="@+id/newrole_industry_et"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/newrole_edit"
            android:hint="请输入角色所属的行业"
            android:textColor="@color/font_black_999"
            android:textSize="15sp" />



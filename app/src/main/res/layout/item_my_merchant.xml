<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rellayout"
        style="@style/margin_lr_12dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_merchant_head"
            android:layout_width="@dimen/length_100px"
            android:layout_height="@dimen/length_100px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_merchant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:layout_toLeftOf="@+id/tv_merchant_distance"
            android:layout_toRightOf="@+id/iv_merchant_head"
            android:maxLines="1"
            android:text="@string/action_settings"
            android:textColor="@color/font_black_333"
            android:textSize="@dimen/font_30px" />

        <TextView
            android:id="@+id/tv_merchant_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:layout_marginRight="@dimen/margin_12dp"
            android:text="@string/action_settings"
            android:textColor="@color/font_black_888"
            android:textSize="@dimen/font_20px" />

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="28dp"
            android:layout_height="21dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/chec_btn"
            android:visibility="gone" />
    </RelativeLayout>


</LinearLayout>
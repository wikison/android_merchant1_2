<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/scene_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_marginLeft="12dp">

        <TextView
            android:id="@+id/scname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#535252"
            android:text="品味居" />

        <TextView
            android:id="@+id/profess_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="美食管家"
            android:textSize="11sp"
            android:layout_marginTop="8dp"
            android:textColor="#adadad"
            android:layout_below="@+id/scname_tv" />

        <TextView
            android:id="@+id/number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#adadad"
            android:text="250名用户参与"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/profess_tv" />

    </RelativeLayout>


    <TextView
        android:id="@+id/distance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawableRight="@mipmap/right_btn"
        android:drawablePadding="25dp"
        android:textSize="10sp"
        android:textColor="#838282"
        android:layout_marginRight="20dp"
        android:text="1km" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/layout_head"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_12dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_24dp"
            android:layout_marginLeft="@dimen/margin_24dp"
            android:layout_marginRight="@dimen/margin_24dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/yuyaokuang"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_12dp"
                android:layout_marginRight="@dimen/margin_12dp"
                android:layout_marginTop="60dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_topic"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginTop="@dimen/margin_12dp">

                    <TextView
                        style="@style/text_14_black_28"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="活动主题"/>


                    <TextView
                        android:id="@+id/tv_topic"
                        style="@style/text_14_black_999"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/right_btn"
                        android:text="商务宴请"/>

                </RelativeLayout>

                <View
                    style="@style/divider1dpcba"/>

                <RelativeLayout
                    android:id="@+id/rl_time"
                    android:layout_width="match_parent"
                    android:layout_height="58dp">

                    <TextView
                        style="@style/text_14_black_28"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="活动时间"/>


                    <TextView
                        android:id="@+id/tv_time"
                        style="@style/text_14_black_999"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/right_btn"
                        android:text="选择时间"/>

                </RelativeLayout>

                <View
                    style="@style/divider1dpcba"/>

                <RelativeLayout
                    android:id="@+id/rl_organizer"
                    android:layout_width="match_parent"
                    android:layout_height="58dp">

                    <TextView
                        style="@style/text_14_black_28"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="发起人"/>

                    <EditText
                        android:id="@+id/et_organizer"
                        style="@style/text_14_black_999"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="70dp"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="输入您的称呼"
                        android:maxLength="15"
                        android:textColorHint="@color/font_black_999"/>


                </RelativeLayout>

                <View
                    style="@style/divider1dpcba"/>
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/invite"/>
    </FrameLayout>

    <Button
        android:id="@+id/btn_confirm"
        style="@style/common_btn_235"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:text="发起预邀"/>
</LinearLayout>
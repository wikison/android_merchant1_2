<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/bg_e5"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:textColor="@color/contact_friend_list_Letter"
        android:textSize="13sp"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/headline"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/bg_e5" />

    <RelativeLayout
        style="@style/margin_lr_12dp"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_12dp"
        android:paddingTop="@dimen/margin_12dp">

        <ImageView
            android:id="@+id/iv_friend_head"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_friend_head"
            android:paddingLeft="@dimen/margin_8dp"
            android:maxLines="1"
            android:text="醋溜蛋"
            android:textColor="@color/font_black_333"
            android:textSize="@dimen/font_30px" />

        <TextView
            android:id="@+id/tv_friend_roles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_friend_name"
            android:layout_toLeftOf="@+id/cb_friend"
            android:drawableLeft="@mipmap/dengji_icon"
            android:drawablePadding="2dp"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/bg_head"
            android:textSize="@dimen/font_30px" />

        <CheckBox
            android:id="@+id/cb_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_12dp" />
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_head"/>


    <RelativeLayout style="@style/binding_linearLayout"
        android:layout_marginTop="23dp">

        <EditText
            android:id="@+id/et_oldpassword"
            style="@style/binding_edittext"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:drawableBottom="@drawable/selector_drawable_line"
            android:hint="请输入旧密码"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textSize="16sp" />
    </RelativeLayout>


    <RelativeLayout style="@style/binding_linearLayout">

        <EditText
            android:id="@+id/et_newpassword"
            style="@style/binding_edittext"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:drawableBottom="@drawable/selector_drawable_line"
            android:hint="请输入新密码"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textSize="16sp"
            />

    </RelativeLayout>
    <RelativeLayout style="@style/binding_linearLayout">
        <EditText
            android:id="@+id/et_renewpassword"
            style="@style/binding_edittext"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:drawableBottom="@drawable/selector_drawable_line"
            android:hint="请再次输入新密码"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textSize="16sp" />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="*密码长度6~20位,设置密码的格式不能是纯数字密码"
            android:textColor="#868686"
            android:textSize="12sp" />

        <Button
            android:id="@+id/submit"
            android:layout_width="@dimen/common_btn_width_235"
            android:layout_height="@dimen/common_btn_height_35"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/common_selector_btn"
            android:onClick="submit"
            android:text="确认提交"
            android:textColor="@color/white"
            android:textSize="@dimen/font_32px" />

        <TextView
            android:id="@+id/tv_forgetpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/submit"
            android:layout_alignRight="@id/submit"
            android:layout_below="@id/submit"
            android:layout_marginRight="13dp"
            android:layout_marginTop="26dp"
            android:text="忘记密码"
            android:textColor="#bfbfbf"
            android:textSize="15dp" />


    </RelativeLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:id="@+id/ll_coastmessage"
	android:background="@color/bg_f0">

	<TextView
		android:textColor="@color/font_black_46"
		android:textSize="16sp"
		android:gravity="center"
		android:layout_marginTop="10dp"
		android:id="@+id/tv_messagedate"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="2016-6-20"
		/>




	<com.flyco.roundview.RoundTextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/tv_title_message"
		app:rv_backgroundPressColor="@color/white"
		app:rv_cornerRadius="5dp"
		app:rv_backgroundColor="@color/white"
		android:paddingTop="15dp"
		android:paddingBottom="15dp"
		android:paddingRight="12dp"
		android:paddingLeft="12dp"
		style="@style/text_15_222"
		android:layout_margin="8dp"
		android:text="周黑鸭邀请你去全聚德在线买单"

		/>


</LinearLayout>
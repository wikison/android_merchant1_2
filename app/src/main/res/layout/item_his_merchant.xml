<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:padding="16dp"
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/ripple_item_clicked2">
        <View
            style="@style/divider_1px"/>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            card_view:cardBackgroundColor="@color/transparent"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="0dp">

            <ImageView
                android:id="@+id/iv_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@color/bg_head"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="#30000000"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/top_bottom">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:maxLength="9"
                        android:shadowColor="@color/font_black_28"
                        android:shadowDx="1"
                        android:shadowDy="3"
                        android:shadowRadius="8"
                        android:text="兰州大酒店"
                        android:textColor="@color/white"
                        android:textSize="23sp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:shadowColor="@color/font_black_28"
                        android:shadowDx="1"
                        android:shadowDy="3"
                        android:shadowRadius="8"
                        android:text="人均100"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_30px"
                        android:textStyle="bold"/>

                    <View
                        style="@style/divider"
                        android:layout_width="2px"
                        android:layout_height="20dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:background="@color/white"/>

                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:shadowColor="@color/font_black_28"
                        android:shadowDx="1"
                        android:shadowDy="3"
                        android:shadowRadius="8"
                        android:text="xxm"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_30px"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <com.zemult.merchant.view.FNRadioGroup
            android:clickable="false"
            android:id="@+id/rg_ta_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            android:visibility="gone"/>

        <com.flyco.roundview.RoundTextView
            android:id="@+id/rtv_buy"
            android:layout_width="@dimen/common_btn_width_235"
            android:layout_height="@dimen/common_btn_height_35"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_16dp"
            android:clickable="true"
            android:gravity="center"
            android:text="找TA买单"
            android:textColor="@color/font_main"
            android:textSize="@dimen/font_36px"
            app:rv_backgroundColor="@color/white"
            app:rv_backgroundPressColor="@color/bg_head_red"
            app:rv_cornerRadius="18dp"
            app:rv_strokeColor="@color/font_main"
            app:rv_strokeWidth="1px"/>
    </LinearLayout>



    <View
        style="@style/divider12dp"/>
</LinearLayout>
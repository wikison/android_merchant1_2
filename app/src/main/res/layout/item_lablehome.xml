<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    >
        <ImageView
            android:id="@+id/iv_friendhead"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            style="@style/text_14_black_999"
            android:text="彩虹象"
            android:id="@+id/tv_friendname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center_vertical"
            style="@style/text_14_black_999"
            android:layout_marginLeft="15dp"
            android:text="2小时"
            android:id="@+id/tv_tietime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        style="@style/text_16_black_666"
        android:text="我觉得你骨骼惊奇，身轻而气凝，必是百年一遇的奇才！特赠标签一枚，以资勉励！"
        android:id="@+id/tv_labdescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/tv_fromwho"
            style="@style/text_14_black_999"
            android:text="获得来自彩虹象的标签"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_fromwho"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            style="@style/text_14_black_999"
            android:text="标签名称"
            android:id="@+id/tv_labname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:background="@color/font_black_666"
            android:textColor="@color/white"
            android:layout_marginLeft="15dp"
            android:text="贴回去"
            android:textSize="14sp"
            android:id="@+id/btn_giveback"
            android:layout_width="60dp"
            android:layout_height="20dp" />

    </RelativeLayout>
    <View
        android:layout_marginTop="8dp"
        style="@style/divider" />
</LinearLayout>

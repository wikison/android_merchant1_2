<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_item_clicked2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/text_15_black_28"
                        android:text="锦江国际大酒店"/>

                    <TextView
                        android:id="@+id/tv_service_position"
                        style="@style/text_12_black_999"
                        android:layout_marginLeft="@dimen/margin_12dp"
                        android:text="营销经理"/>
                </LinearLayout>


                <com.zemult.merchant.view.FNRadioGroup
                    android:id="@+id/rg_ta_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_service"
                    android:layout_marginBottom="@dimen/margin_16dp">

                </com.zemult.merchant.view.FNRadioGroup>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">

            <TextView
                style="@style/text_12_black_28"
                android:layout_marginRight="@dimen/margin_16dp"
                android:drawablePadding="@dimen/margin_8dp"
                android:drawableRight="@mipmap/right_btn"
                android:text=""/>
        </RelativeLayout>
    </LinearLayout>

    <View style="@style/divider"/>

    <RelativeLayout
        style="@style/relative_layout_item">

        <TextView
            android:id="@+id/tv_text_state"
            style="@style/text_15_black_28"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:text="管家状态"/>

        <ImageView
            android:id="@+id/iv_state"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/tv_state"
            android:src="@mipmap/manglu"/>

        <TextView
            android:id="@+id/tv_state"
            style="@style/text_15_black_28"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawablePadding="8dp"
            android:text="忙碌"/>

    </RelativeLayout>

    <View style="@style/divider"/>

    <RelativeLayout
        android:id="@+id/rl_service_plan"
        style="@style/relative_layout_item">

        <TextView
            style="@style/text_15_black_28"
            android:text="服务方案"/>

        <TextView
            android:id="@+id/tv_service_plan"
            style="@style/text_15_black_999"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/margin_12dp"
            android:drawableRight="@mipmap/right_btn"
            android:text="98"/>
    </RelativeLayout>

    <View style="@style/divider"/>

    <RelativeLayout
        android:id="@+id/rl_seven"
        style="@style/relative_layout_item">

        <TextView
            style="@style/text_15_black_28"
            android:text="7天服务指数"/>

        <TextView
            android:id="@+id/tv_seven"
            style="@style/text_15_black_999"
            android:layout_alignParentRight="true"
            android:text="98"/>
    </RelativeLayout>

    <View style="@style/divider"/>

    <RelativeLayout
        android:id="@+id/rl_comment"
        style="@style/relative_layout_item">

        <TextView
            style="@style/text_15_black_28"
            android:text="评价"/>

        <TextView
            android:id="@+id/tv_comment"
            style="@style/text_15_black_999"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/margin_12dp"
            android:drawableRight="@mipmap/right_btn"
            android:text="12条评价"/>
    </RelativeLayout>


</LinearLayout>

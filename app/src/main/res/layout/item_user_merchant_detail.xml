<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_item_clicked2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/text_15_black_28"
                    android:text="锦江国际大酒店"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_money"
                        style="@style/text_12_black_999"
                        android:text="人均100元"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_8dp"
                        android:background="@color/divider_c1"/>

                    <TextView
                        android:id="@+id/tv_distance"
                        style="@style/text_12_black_999"
                        android:layout_marginLeft="@dimen/margin_8dp"
                        android:text="300m"/>
                </LinearLayout>

            </LinearLayout>

            <com.zemult.merchant.view.FNRadioGroup
                android:id="@+id/rg_ta_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_16dp">

            </com.zemult.merchant.view.FNRadioGroup>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">

            <TextView
                style="@style/text_12_black_28"
                android:layout_marginRight="@dimen/margin_16dp"
                android:drawablePadding="@dimen/margin_8dp"
                android:drawableRight="@mipmap/right_btn"
                android:text="详情"/>
        </RelativeLayout>
    </LinearLayout>

    <View style="@style/divider"/>

    <View
        style="@style/divider"
        android:layout_marginTop="@dimen/margin_16dp"/>

    <RelativeLayout
        style="@style/relative_layout_item">

        <TextView
            style="@style/text_15_black_28"
            android:text="7天服务指数"/>

        <TextView
            android:id="@+id/tv_seven"
            style="@style/text_15_black_999"
            android:layout_alignParentRight="true"
            android:text="98"/>
    </RelativeLayout>

    <View style="@style/divider"/>

    <RelativeLayout
        android:id="@+id/rl_activity"
        style="@style/relative_layout_item"
        android:layout_marginTop="@dimen/margin_16dp">

        <TextView
            style="@style/text_15_black_28"
            android:text="管家动态"/>

        <TextView
            android:id="@+id/tv_activity"
            style="@style/text_15_black_999"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/margin_8dp"
            android:drawableRight="@mipmap/right_btn"
            android:text=""/>
    </RelativeLayout>

    <View style="@style/divider"/>

    <RelativeLayout
        android:id="@+id/rl_service_comment"
        style="@style/relative_layout_item">

        <TextView
            style="@style/text_15_black_28"
            android:text="服务评价"/>

        <TextView
            android:id="@+id/tv_comment_num"
            style="@style/text_15_black_999"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/margin_8dp"
            android:drawableRight="@mipmap/right_btn"
            android:text="12条评价"/>
    </RelativeLayout>

</LinearLayout>

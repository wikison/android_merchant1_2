<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_item_clicked2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/text_15_black_28"
                    android:text="锦江国际大酒店"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_distance"
                        style="@style/text_12_black_999"
                        android:text="300m"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_8dp"
                        android:background="@color/divider_c1"/>

                    <TextView
                        android:id="@+id/tv_money"
                        style="@style/text_12_black_999"
                        android:layout_marginLeft="@dimen/margin_8dp"
                        android:text="人均100元"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">

            <TextView
                style="@style/text_12_black_28"
                android:layout_marginRight="@dimen/margin_16dp"
                android:drawablePadding="@dimen/margin_8dp"
                android:drawableRight="@mipmap/right_btn"
                android:text=""/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        style="@style/relative_layout_item"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_12dp"
        android:paddingTop="@dimen/margin_12dp">

        <TextView
            style="@style/text_15_black_28"
            android:text="管家职位"/>

        <TextView
            android:id="@+id/tv_service_position"
            style="@style/text_15_black_999"
            android:layout_alignParentRight="true"
            android:text=""/>
    </RelativeLayout>

    <View style="@style/divider"/>

    <RelativeLayout
        style="@style/relative_layout_item"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_service"
            style="@style/text_12_black_28"
            android:layout_marginTop="@dimen/margin_12dp"
            android:text="管家服务"/>

        <com.zemult.merchant.view.FNRadioGroup
            android:id="@+id/rg_ta_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_service"
            android:layout_marginBottom="@dimen/margin_16dp">

        </com.zemult.merchant.view.FNRadioGroup>
    </RelativeLayout>

    <RelativeLayout
        style="@style/relative_layout_item"
        android:layout_marginTop="@dimen/margin_12dp">

        <TextView
            android:id="@+id/tv_text_state"
            style="@style/text_15_black_28"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:text="管家状态"/>

        <ImageView
            android:id="@+id/iv_state"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/tv_state"
            android:src="@mipmap/manglu"/>

        <TextView
            android:id="@+id/tv_state"
            style="@style/text_15_black_28"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawablePadding="8dp"
            android:text="忙碌"/>

    </RelativeLayout>

    <View style="@style/divider"/>

    <View
        style="@style/divider"
        android:layout_marginTop="@dimen/margin_12dp"/>

    <RelativeLayout
        style="@style/relative_layout_item">

        <TextView
            style="@style/text_15_black_28"
            android:text="7天服务指数"/>

        <TextView
            android:id="@+id/tv_seven"
            style="@style/text_15_black_999"
            android:layout_alignParentRight="true"
            android:text="98"/>
    </RelativeLayout>

    <View style="@style/divider"/>


</LinearLayout>

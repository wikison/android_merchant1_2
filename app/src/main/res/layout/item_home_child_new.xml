<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ripple_item_clicked2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:id="@+id/ll_top"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            style="@style/divider12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center">
            <View style="@style/divider"
                android:layout_width="12dp"
                android:layout_height="2px"
                android:background="#e6bb7c"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#e6bb7c"
                android:textSize="@dimen/font_32px"
                android:text="商户推荐"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />

            <View style="@style/divider"
                android:layout_width="12dp"
                android:layout_height="2px"
                android:background="#e6bb7c"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:visibility="gone"
        android:id="@+id/view_top"
        style="@style/divider12dp"
        android:layout_height="16dp"
        android:background="@color/white"/>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="153dp"
        card_view:cardBackgroundColor="@color/transparent"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0dp"
        card_view:cardPreventCornerOverlap="false"
        >

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/bg_head"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="#30000000"
            android:scaleType="centerCrop"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:background="@drawable/top_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:text="兰州大酒店"
                    android:shadowColor="@color/font_black_28"
                    android:shadowDx="1"
                    android:shadowDy="3"
                    android:shadowRadius="8"
                    android:textStyle="bold"
                    android:maxLength="9"
                    android:layout_margin="12dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="19dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_money"
                    android:shadowColor="@color/font_black_28"
                    android:shadowRadius="8"
                    android:shadowDx="1"
                    android:shadowDy="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人均100"
                    android:textSize="@dimen/font_30px"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <View style="@style/divider"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_width="2px"
                    android:layout_height="20dp"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/tv_distance"
                    android:shadowColor="@color/font_black_28"
                    android:shadowRadius="8"
                    android:shadowDx="1"
                    android:shadowDy="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxm"
                    android:textSize="@dimen/font_30px"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

            </LinearLayout>
        </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_qianyue"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/qianyuehsanghu"/>
            </RelativeLayout>

        </FrameLayout>

    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_marginRight="6dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_num"
            android:id="@+id/iv_shuren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/shu"/>

        <TextView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
             android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="约客x位"
            android:textSize="@dimen/font_32px"
            android:textColor="#e6bb7c"/>


        <android.support.v7.widget.RecyclerView
            android:layout_alignParentLeft="true"
            android:id="@+id/recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>


    <View style="@style/divider"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>


</LinearLayout>


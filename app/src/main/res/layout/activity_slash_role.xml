<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.slash.SlashRoleActivity">

    <include
        android:id="@+id/include_layout_head"
        layout="@layout/layout_head"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="134dp">

        <ImageView
            android:id="@+id/head_iv"
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_loading" />

        <LinearLayout
            android:id="@+id/detailgo_lv"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_alignParentBottom="true"
            android:background="#44000000"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="常州新北区品味居"
                android:textColor="#fff"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_jumpaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="18dp"
                android:drawablePadding="18dp"
                android:drawableRight="@mipmap/right_btn"
                android:text="详情"
                android:textColor="#fff"
                android:textSize="17sp" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/suggest_rl"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#e5e5e5"
        android:gravity="center">

        <TextView
            android:id="@+id/suggest_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有喜欢的斜杠角色?请提出您的宝贵建议..."
            android:textColor="#ffa726"
            android:textSize="15sp"
            android:textStyle="italic" />

    </RelativeLayout>

    <ListView
        android:id="@+id/role_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"></ListView>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_head"
        layout="@layout/layout_head"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_f2"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_48dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_xgpostion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的斜杠价值：全国排名5264589位"
                    android:visibility="gone"/>


                <com.zemult.merchant.view.RiseNumberTextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_48dp"
                    android:text="0"
                    android:textColor="@color/ff0000"
                    android:textSize="60sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_money"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_money"
                    android:text="元"
                    android:textColor="@color/ff0000"
                    android:textSize="16sp"/>

                <com.flyco.roundview.RoundTextView
                    android:id="@+id/btn_withdrawals"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/tv_money"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="提现"
                    android:textColor="@color/btn_normal"
                    android:textSize="16sp"
                    app:rv_cornerRadius="5dp"
                    app:rv_strokeColor="@color/btn_normal"
                    app:rv_strokeWidth="1dp"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text=" 账户安全（请设置下列项目保护账号）"
                android:textColor="@color/font_black_999"
                />

            <RelativeLayout
                android:id="@+id/rl_bangbankcard"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/ripple_item_clicked2"
                android:clickable="true">

                <TextView
                    style="@style/my_mini_text"
                    android:drawableLeft="@mipmap/zhanghao_icon"
                    android:text="账户绑定"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:background="@mipmap/right_btn"/>
            </RelativeLayout>

            <include layout="@layout/include_devider1dp_layout"/>

            <RelativeLayout
                android:id="@+id/rl_changephone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/ripple_item_clicked2"
                android:clickable="true">

                <TextView
                    style="@style/my_mini_text"
                    android:drawableLeft="@mipmap/shouji_icon"
                    android:text="更换绑定手机号"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:background="@mipmap/right_btn"/>
            </RelativeLayout>

            <include layout="@layout/include_devider1dp_layout"/>

            <RelativeLayout
                android:id="@+id/rl_authentication"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/ripple_item_clicked2"
                android:clickable="true">

                <TextView
                    style="@style/my_mini_text"
                    android:drawableLeft="@mipmap/shiming_icon"
                    android:text="实名认证"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:background="@mipmap/right_btn"/>
            </RelativeLayout>

            <include layout="@layout/include_devider10dp_layout"/>

            <RelativeLayout
                android:id="@+id/rl_loginpassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/ripple_item_clicked2"
                android:clickable="true">

                <TextView
                    style="@style/my_mini_text"
                    android:drawableLeft="@mipmap/home_icon"
                    android:text="登录密码"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:background="@mipmap/right_btn"/>
            </RelativeLayout>

            <include layout="@layout/include_devider1dp_layout"/>

            <RelativeLayout
                android:id="@+id/rl_paypassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/ripple_item_clicked2"
                android:clickable="true">

                <TextView
                    style="@style/my_mini_text"
                    android:drawableLeft="@mipmap/zhifumima_icon"
                    android:text="支付密码"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:background="@mipmap/right_btn"/>
            </RelativeLayout>

            <include layout="@layout/include_devider1dp_layout"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#d75847"
        >

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center_vertical">

            <Button

                android:id="@+id/lh_btn_back"
                android:layout_width="@dimen/j44dp"
                android:layout_height="@dimen/j44dp"
                android:background="@mipmap/back_btn"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:gravity="center_vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/jubao_icon_white" />

        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_right"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="right|center_vertical"
            android:paddingRight="12dp"
            android:textColor="@drawable/head_right_text_color"
            android:textSize="@dimen/font_30px"
            />


        <TextView
            android:id="@+id/lh_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/lh_btn_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:textSize="14sp"
            android:background="@color/white"
            android:textColor="@drawable/head_right_text_color"
            android:visibility="invisible" />

        <Button
            android:id="@+id/lh_btn_rightiamge"
            android:textSize="14sp"
            android:layout_width="@dimen/j35dp"
            android:layout_height="@dimen/j35dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="8dp"
            android:visibility="invisible" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@mipmap/hongbao1"
        android:layout_height="220dp">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="收到赞赏红包!"
            android:textColor="@color/e6bb7c"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/money_tv"
            android:layout_width="wrap_content"
            android:textSize="50sp"
            android:layout_below="@+id/tv1"
            android:layout_marginTop="42dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/e6bb7c"
            android:text="------"
            android:layout_height="wrap_content" />

<ImageView
    android:id="@+id/head_iv"
    android:layout_width="70dp"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="-35dp"
    android:background="@mipmap/user_icon"
    android:layout_centerHorizontal="true"
    android:layout_height="70dp" />
    </RelativeLayout>

    <TextView
    android:id="@+id/redfrom_tv"
    android:layout_gravity="center_horizontal"
    android:textSize="24sp"
    android:layout_marginTop="35dp"
    android:textColor="@color/font_black_28"
    android:text="------------"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_seeMore"
            android:layout_centerHorizontal="true"
            android:textColor="#007aff"
            android:textSize="15sp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看详情"/>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_tks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        >

        <EditText
            android:background="@color/white"
            android:layout_margin="30dp"
            android:padding="10dp"
            android:hint="谢谢土豪~祝你身体棒棒哒，事业顺顺哒~红包已收到，么么哒~"
            style="@style/text_15_black_28"
            android:id="@+id/et_tks"
            android:maxLength="100"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_tks"
            style="@style/common_btn_235"
            android:layout_marginBottom="@dimen/j15dp"
            android:text="谢谢TA"/>
    </LinearLayout>


</LinearLayout>
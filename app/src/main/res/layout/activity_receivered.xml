<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical">

    <include layout="@layout/layout_head"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@mipmap/hongbao1"
        android:layout_height="300dp">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="收到赞赏红包!"
            android:textColor="@color/e6bb7c"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/money_tv"
            android:layout_width="wrap_content"
            android:textSize="50sp"
            android:layout_below="@+id/tv1"
            android:layout_marginTop="42dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/e6bb7c"
            android:text="------"
            android:layout_height="wrap_content" />

<ImageView
    android:id="@+id/head_iv"
    android:layout_width="70dp"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="-35dp"
    android:background="@drawable/xml_circle_grey_bg"
    android:layout_centerHorizontal="true"
    android:layout_height="70dp" />
    </RelativeLayout>

<TextView
    android:id="@+id/redfrom_tv"
    android:layout_gravity="center_horizontal"
    android:textSize="24sp"
    android:layout_marginTop="55dp"
    android:textColor="@color/font_black_28"
    android:text="------------"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_seeMore"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="65dp"
            android:textColor="#007aff"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看详情"/>

    </RelativeLayout>





</LinearLayout>
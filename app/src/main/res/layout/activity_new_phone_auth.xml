<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zemult.merchant.activity.mine.pwdsetting.NewPhoneAuthActivity">
    <include
        android:id="@+id/layout_head"
        layout="@layout/layout_head" />

    <ImageView
        android:layout_marginTop="26dp"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/phone_icon_bang"
        android:layout_width="40dp"
        android:layout_height="78dp" />

    <LinearLayout
        android:layout_marginTop="46dp"
        style="@style/binding_linearLayout">

        <TextView
            style="@style/text_16_black_666"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:text="+86" />


        <EditText
            android:layout_marginLeft="15dp"
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:maxLength="11"
            android:inputType="number"
            android:textSize="@dimen/font_32px"
            android:textColorHint="#bfbfbf"
            android:textColor="#000000"
            android:hint="请输入您的新手机号码"/>
    </LinearLayout>
    <View
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_c1"/>

    <LinearLayout
        style="@style/binding_linearLayout">

        <TextView
            android:id="@+id/tv_sendcode"
            style="@style/text_16_black_666"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_head"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:text="获取验证码" />


        <EditText
            android:layout_marginLeft="15dp"
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="@dimen/font_32px"
            android:textColorHint="#bfbfbf"
            android:textColor="#000000"
            android:maxLength="6"
            android:inputType="number"
            android:hint="请输入您的手机验证码"/>
    </LinearLayout>

    <View
    android:layout_marginRight="12dp"
    android:layout_marginLeft="12dp"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/divider_c1"/>

    <Button
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:text="立即绑定"
        android:background="@drawable/common_selector_btn"
        style="@style/text_18_white"
        android:id="@+id/btn_bangding"
        android:layout_width="250dp"
        android:layout_height="36dp" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_bespeak"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.zemult.merchant.im.CreateBespeakActivity">

    <include
        android:id="@+id/layout_head"
        layout="@layout/layout_head"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlcustomer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@drawable/ripple_item_clicked2">


                <ImageView
                    android:src="@mipmap/user_icon"
                    android:id="@+id/v_user"
                    android:layout_centerVertical="true"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_toRightOf="@+id/v_user"
                    style="@style/text_15_black_28"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text=""
                    />


            </RelativeLayout>


            <View
                style="@style/divider10dp"  />

            <RelativeLayout
                android:id="@+id/rl_shopname"
                style="@style/container_height88"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    style="@style/text_15_black_28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="商户"
                    />


                <TextView
                    android:id="@+id/tv_shopname"
                    android:layout_alignParentRight="true"
                    style="@style/text_15_black_999"
                    android:layout_centerVertical="true"
                    android:text=""/>

            </RelativeLayout>


            <View
                style="@style/divider1dp"  />

            <RelativeLayout
                android:id="@+id/rl_ordertime"
                style="@style/container_height88"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    style="@style/text_15_black_28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="需求时间"
                    />


                <TextView
                    android:id="@+id/tv_shijian"
                    android:layout_alignParentRight="true"
                    style="@style/text_15_black_999"
                    android:layout_centerVertical="true"
                    android:text=""/>

            </RelativeLayout>


            <View
                style="@style/divider1dp"  />


            <RelativeLayout
                android:id="@+id/rl_select_deadline"
                style="@style/container_height88"
                android:background="@color/white"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:id="@+id/tv_title_select_deadline"
                    style="@style/text_15_black_28"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="预计人数"/>

                <TextView
                    android:id="@+id/tv_renshu"
                    android:layout_alignParentRight="true"
                    style="@style/text_15_black_999"
                    android:layout_centerVertical="true"
                    android:text=""/>

            </RelativeLayout>


            <View
                style="@style/divider10dp"
                />


            <RelativeLayout
                android:id="@+id/rl_customerphone"
                style="@style/container_height88"
                android:background="@color/white"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    style="@style/text_15_black_28"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="人均预算"/>

                <TextView
                    android:id="@+id/tv_renjun"
                    android:layout_alignParentRight="true"
                    style="@style/text_15_black_999"
                    android:layout_centerVertical="true"
                    android:text=""/>

            </RelativeLayout>


            <View
                style="@style/divider1dp"
                />

            <RelativeLayout
                android:id="@+id/rl_my_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="@dimen/margin_8dp"
                android:paddingRight="@dimen/margin_8dp"
                android:paddingTop="15dp">


                <TextView
                    android:id="@+id/tv_my_service"
                    style="@style/text_14_black_28"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:text="服务需求"/>

                <com.zemult.merchant.view.FNRadioGroup
                    android:id="@+id/fn_my_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginLeft="@dimen/margin_24dp"
                    android:layout_toRightOf="@+id/tv_my_service"/>
                


            </RelativeLayout>



            <View
                style="@style/divider10dp"
                />

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_my_voice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="@dimen/margin_8dp"
                android:paddingRight="@dimen/margin_8dp"
                android:paddingTop="15dp">


                <TextView
                    android:id="@+id/tv_my_voice"
                    style="@style/text_14_black_28"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:text="语音需求"/>


                <com.flyco.roundview.RoundRelativeLayout
                    android:id="@+id/rll_voice"
                    android:layout_width="190dp"
                    android:layout_height="32dp"
                    android:layout_centerHorizontal="true"
                    app:rv_backgroundColor="@color/bg_head"
                    app:rv_backgroundPressColor="@color/btn_press"
                    app:rv_cornerRadius="8dp">

                    <ImageView
                        android:padding="3dp"
                        android:id="@+id/iv_voice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:src="@mipmap/luying_icon" />

                    <TextView
                        android:id="@+id/tv_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="60dp"
                        android:layout_alignParentLeft="true"
                        android:text="1''"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_30px" />

                </com.flyco.roundview.RoundRelativeLayout>


            </RelativeLayout>




        </LinearLayout>
    </ScrollView>
</LinearLayout>

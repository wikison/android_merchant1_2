<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_head"
        layout="@layout/layout_head" />

    <LinearLayout style="@style/binding_linearLayout">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:text="手机号" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColorHint="#bfbfbf"
            android:textColor="#000000"
            android:id="@+id/et_phone"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="12dp"
            android:layout_height="2px"
            android:background="@color/white"/>
        <View
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#f7f7f7"/>

    </LinearLayout>


    <LinearLayout
        style="@style/binding_linearLayout">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:text="验证码" />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColorHint="#bfbfbf"
            android:textColor="#000000"
            android:hint="请输入验证码"
            android:layout_weight="10"
            android:inputType="number"
            android:maxLength="6"/>

        <TextView
            android:id="@+id/tv_sendcode"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="发送验证码"
            android:textColor="@color/bg_head"
            android:textSize="@dimen/font_30px" />
    </LinearLayout>
    <View
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#f7f7f7"/>


    <LinearLayout style="@style/binding_linearLayout">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:text="姓名" />


        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColorHint="#bfbfbf"
            android:textColor="#000000"
            android:hint="输入您的真实姓名"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#f7f7f7"/>


    <LinearLayout style="@style/binding_linearLayout">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:text="身份证号" />


        <EditText
            android:id="@+id/et_idnumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColorHint="#bfbfbf"
            android:textColor="#000000"
            android:hint="请输入您的身份证"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/bt_over"
            style="@style/btn_common_orange"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="54dp"
            android:text="完成"/>
    </RelativeLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f2"
    android:orientation="vertical">

    <include layout="@layout/layout_head"></include>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:src="@mipmap/check_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:textSize="18sp"

        android:text="提现申请已提交"
        android:textColor="@color/bg_head"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/sel_color"
            android:text="------" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv1"
            android:layout_marginTop="24dp"
            android:textSize="15sp"
            android:textColor="@color/sel_color"

            android:layout_below="@+id/tv1"
            android:text="提现金额" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_alignBottom="@+id/tv2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:textSize="15sp"
            android:text="------"
            android:textStyle="bold"
            android:textColor="@color/sel_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv2"
            android:layout_marginTop="24dp"
            android:textSize="15sp"
            android:textColor="@color/sel_color"
            android:layout_marginBottom="24dp"
            android:layout_below="@+id/tv2"
            android:text="手续费" />


        <TextView
            android:id="@+id/others_tv"
            android:layout_width="wrap_content"
            android:layout_alignBottom="@+id/tv3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:textSize="15sp"
            android:text="------"
            android:textStyle="bold"
            android:textColor="@color/sel_color"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_marginTop="24dp"
            android:textSize="15sp"
            android:textColor="@color/sel_color"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="支付宝帐户"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/commit_btn"
        android:layout_width="@dimen/common_btn_width_235"
        android:layout_height="@dimen/common_btn_height_35"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/common_selector_btn"
        android:onClick="click"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="18sp"/>


</LinearLayout>
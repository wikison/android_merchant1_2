<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_item_clicked2"
    android:clickable="false"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_zanpeople"
            android:textColor="@color/bg_head"
            android:textSize="14sp"
            android:text="铁锅回复我："
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_toRightOf="@+id/tv_zanpeople"
            android:id="@+id/tv_zan"
            android:textColor="@color/font_black_666"
            android:textSize="14sp"
            android:text="赞了这条任务"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>




<LinearLayout
    android:id="@+id/ll_title"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_title"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="@color/font_black_28"
        android:textSize="@dimen/font_32px"
        android:text="ddddddddddd"
        />

</LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/font_black_888"
            android:textSize="@dimen/font_28px"
            android:text="2小时前完成"
            android:drawablePadding="8dp"/>




    </RelativeLayout>
</LinearLayout>





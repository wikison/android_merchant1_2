<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View style="@style/divider" />

    <LinearLayout
        android:padding="12dp"
        android:background="@drawable/ripple_item_clicked2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/user_icon" />

            <TextView
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_head"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_black_666"
                android:textSize="@dimen/font_32px" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="时间"
                android:textColor="@color/font_black_999"
                android:textSize="@dimen/font_24px" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_title"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/fenxiang_icon_sel" />

            <TextView
                android:maxLines="1"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_title"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_black_333"
                android:textSize="@dimen/font_30px" />
        </RelativeLayout>

    </LinearLayout>




    <View style="@style/divider" />
    <View style="@style/divider10dp"
        android:background="@color/transparent"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="60dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/iv_userhead"
        android:layout_width="45dp"
        android:layout_height="45dp" />

    <RelativeLayout
        android:id="@+id/rellayout"
        style="@style/margin_lr_12dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical">



        <TextView
            android:id="@+id/tv_mybill_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发布任务"
            android:textColor="@color/font_black_333"
            android:textSize="@dimen/font_30px" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"

            android:layout_marginLeft="12dp"
            android:textSize="14sp"
            android:textColor="@color/bg_head"
            android:layout_toRightOf="@+id/tv_mybill_name"
            android:layout_height="wrap_content" />


        <TextView
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_mybill_name"
            android:id="@+id/tv_mybill_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-7-20"
            android:textColor="@color/font_black_888"
            android:textSize="@dimen/font_20px" />


            <TextView
                android:visibility="gone"
                android:text="+5"
                android:id="@+id/tv_mybill_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_black_333"
                android:layout_alignTop="@+id/tv_mybill_name"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/font_30px"
                 />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_mybill_note"
                android:layout_alignTop="@+id/tv_mybill_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易信息"
                android:maxLines="1"
                android:gravity="right"
                android:layout_toRightOf="@+id/tv_state"
                android:layout_alignParentRight="true"
                android:textColor="@color/font_black_888"
                android:textSize="@dimen/font_20px" />




    </RelativeLayout>


</LinearLayout>
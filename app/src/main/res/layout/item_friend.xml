<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/bg_e5"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:textColor="@color/contact_friend_list_Letter"
        android:textSize="13sp"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/headline"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/bg_e5" />

    <RelativeLayout
        style="@style/margin_lr_12dp"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_12dp"
        android:paddingTop="@dimen/margin_12dp">

        <ImageView
            android:id="@+id/iv_friend_head"
            android:layout_width="@dimen/length_88px"
            android:layout_height="@dimen/length_88px"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:layout_toRightOf="@+id/iv_friend_head"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_friend_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_my_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="醋溜蛋"
                    android:textColor="@color/font_black_46"
                    android:textSize="@dimen/font_30px" />

                <ImageView
                    android:id="@+id/iv_friend_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_friend_roles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@mipmap/dengji_icon"
                    android:singleLine="true"
                    android:text="3个场景"
                    android:textColor="@color/bg_head"
                    android:textSize="@dimen/font_30px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_friend_work"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginTop="@dimen/margin_6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_friend_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="银铼科技-产品经理"
                    android:textColor="@color/font_black_666"
                    android:textSize="@dimen/font_22px" />

                <TextView
                    android:id="@+id/tv_friend_workcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3个"
                    android:textColor="@color/font_black_666"
                    android:textSize="@dimen/font_22px" />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
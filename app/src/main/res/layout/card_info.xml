<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="118dp"
            >
            <ImageView
                android:id="@+id/background_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/tiaozhuan_icon"/>


            <ImageView
                android:id="@+id/close_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignRight="@+id/background_iv"
                android:src="@mipmap/close_icon"/>

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:text="美食食客"
                android:textColor="#fff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="20"
                android:textColor="#fff"
                android:textSize="55sp" />


            <TextView
                android:id="@+id/endtime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/money_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="有效期至..."
                android:textColor="#fff"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/minmoney_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/endtime_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:text="消费满100元使用"
                android:textColor="@color/font_black_46"
                android:textSize="12sp" />



            <TextView
                android:id="@+id/isunion_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/minmoney_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="不与其他优惠券同时使用"
                android:textColor="@color/font_black_46"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/note_tv"
                android:layout_width="230dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_below="@+id/isunion_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="备注:"
                android:textColor="@color/font_black_46"
                android:textSize="12sp"/>
            
            <Button
                android:id="@+id/go_btn"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_below="@+id/note_tv"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:text="进店使用"
                android:textSize="16sp"
                android:background="@drawable/common_selector_btn"
                android:layout_marginTop="20dp"/>





        </RelativeLayout>

        <ImageView
            android:id="@+id/head_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="88dp"
            android:src="@mipmap/icon_launcher" />

    </FrameLayout>
</LinearLayout>
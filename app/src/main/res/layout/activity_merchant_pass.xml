<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/include_layout_head"
        layout="@layout/layout_head"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/length_88px"
                android:paddingRight="@dimen/margin_12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="matrix"
                    android:src="@mipmap/merchant_name_icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:background="@color/transparent"
                    android:text="全称"
                    android:singleLine="true"
                    android:textColor="@color/font_black_28"
                    android:textSize="@dimen/font_30px" />

                <TextView
                    android:id="@+id/tv_fullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_name_right"
                    android:layout_toRightOf="@+id/iv_full_name"
                    android:background="@color/transparent"
                    android:text="全称"
                    android:singleLine="true"
                    android:textColor="@color/font_black_333"
                    android:textSize="@dimen/font_30px" />

            </LinearLayout>

            <View style="@style/divider_1px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dip"
                    android:paddingRight="@dimen/margin_12dp"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="matrix"
                        android:src="@mipmap/merchant_scene_classification_icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="15dp"
                        android:background="@color/transparent"
                        android:text="分类"
                        android:singleLine="true"
                        android:textColor="@color/font_black_28"
                        android:textSize="@dimen/font_30px" />

                    <TextView
                        android:id="@+id/tv_classify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="选择行业"
                        android:textColor="@color/font_black_333"
                        android:textSize="@dimen/font_30px" />

                </LinearLayout>

                <View style="@style/divider_1px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dip"
                    android:paddingRight="@dimen/margin_12dp"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="matrix"
                        android:src="@mipmap/merchant_region_icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="15dp"
                        android:background="@color/transparent"
                        android:text="地区"
                        android:singleLine="true"
                        android:textColor="@color/font_black_28"
                        android:textSize="@dimen/font_30px" />

                    <TextView
                        android:id="@+id/tv_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="选择地区"
                        android:textColor="@color/font_black_333"
                        android:textSize="@dimen/font_30px" />

                </LinearLayout>

                <View style="@style/divider_1px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dip"
                    android:paddingRight="@dimen/margin_12dp"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="matrix"
                        android:src="@mipmap/merchant_address_icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="15dp"
                        android:background="@color/transparent"
                        android:text="地址"
                        android:singleLine="true"
                        android:textColor="@color/font_black_28"
                        android:textSize="@dimen/font_30px" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地址"
                        android:textColor="@color/font_black_333"
                        android:textSize="@dimen/font_30px" />
                </LinearLayout>

                <View style="@style/divider_1px" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_12dp"></LinearLayout>


            <View
                style="@style/divider_1px"/>

            <LinearLayout
                android:id="@+id/rl_certification"
                android:layout_width="match_parent"
                android:layout_height="@dimen/length_88px"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:gravity="center_vertical">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/merchant_real_name"/>


                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="法人/负责人实名认证"
                    android:textColor="@color/font_black_333"
                    android:textSize="@dimen/font_30px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已认证"
                    android:textColor="@color/font_black_999"
                    android:textSize="@dimen/font_30px"
                    android:id="@+id/textView9" />
            </LinearLayout>

            <View
                style="@style/divider_1px"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_12dp"></LinearLayout>

            <View
                style="@style/divider_1px"
                android:layout_alignParentBottom="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/length_88px"
                android:background="@color/white"
                android:gravity="center_vertical">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/merchant_document_upload_icon"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="证件上传"
                    android:textColor="@color/font_black_333"
                    android:textSize="@dimen/font_30px"/>

                <TextView
                    android:id="@+id/tv_uploadimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dip"
                    android:text="已上传"
                    android:textColor="@color/font_black_999"/>

            </LinearLayout>
            <View
                style="@style/divider_1px"
                android:layout_alignParentBottom="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_12dp"></LinearLayout>

            <View
                style="@style/divider_1px"/>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="44dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/margin_12dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/yonjin_icon"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="佣金比例"
                    android:textColor="@color/font_black_28"
                    android:textSize="@dimen/font_30px"/>

                <TextView
                    android:id="@+id/tv_yongjin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="center_horizontal"
                    android:textColor="@color/font_black_333"
                    android:textSize="@dimen/font_30px"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:background="@color/transparent"
                    android:text="%"
                    android:textColor="@color/font_black_28"
                    android:textSize="@dimen/font_30px"/>


            </LinearLayout>

            <View style="@style/divider_1px"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/margin_12dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="matrix"
                    android:src="@mipmap/dianhua_icon"/>


                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:text="电话"
                    android:textColor="@color/font_black_333"
                    android:textSize="@dimen/font_30px"/>
                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:textColor="@color/font_black_333"
                    android:textSize="@dimen/font_30px"/>
            </LinearLayout>

            <View style="@style/divider_1px"/>


            <LinearLayout
                android:id="@+id/ll_tixian"
                android:layout_width="match_parent"
                android:layout_height="@dimen/length_88px"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:gravity="center_vertical">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/merchant_real_name"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="提现方式"
                    android:textColor="@color/font_black_333"
                    android:textSize="@dimen/font_30px"
                    />

                <TextView
                    android:id="@+id/tv_tixian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_black_333"
                    android:textSize="@dimen/font_30px"
                    />
            </LinearLayout>

            <View style="@style/divider_1px"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>

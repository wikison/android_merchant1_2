<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="118dp"
            >
            <ImageView
                android:id="@+id/background_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/tiaozhuan_icon"/>


            <ImageView
                android:id="@+id/close_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignRight="@+id/background_iv"
                android:src="@mipmap/close_icon"/>

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:text="美食食客"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:text="20"
                android:textColor="#fff"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/minmoney_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/money_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:text="消费满100元使用"
                android:textColor="#fff"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/endtime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/minmoney_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:text="有效期至..."
                android:textColor="#fff"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/isunion_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/endtime_tv"
                android:layout_marginTop="55dp"
                android:textSize="12sp"
                android:textColor="@color/bg_head"
                android:layout_centerHorizontal="true"
                android:text="不与其他优惠券同时使用"/>

            <TextView
                android:id="@+id/note_tv"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/bg_head"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/isunion_tv"
                android:layout_marginTop="24dp"
                android:text="备注..."/>

            <TextView
                android:id="@+id/num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/bg_head"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/note_tv"
                android:layout_marginTop="30dp"
                android:text="多少张...."
                />

            <TextView
                android:id="@+id/usenum_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/bg_head"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/num_tv"
                android:layout_marginTop="30dp"
                android:text="已经使用多少张...."
                />







        </RelativeLayout>

        <ImageView
            android:id="@+id/head_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="88dp"
            android:src="@drawable/xml_circle_grey_bg" />

    </FrameLayout>
</LinearLayout>
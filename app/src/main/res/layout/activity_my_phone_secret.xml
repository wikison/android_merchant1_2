<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/bg_f2"
              android:orientation="vertical">

    <include layout="@layout/layout_head"/>

    <com.flyco.roundview.RoundTextView
        android:id="@+id/rtv_phone"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_margin="@dimen/margin_12dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_12dp"
        android:text=""
        android:textColor="@color/font_black_46"
        android:textSize="@dimen/font_28px"
        app:rv_backgroundColor="@color/white"
        app:rv_cornerRadius="5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_12dp"
        android:layout_marginRight="@dimen/margin_12dp"
        android:layout_marginTop="@dimen/margin_12dp">

        <TextView
            style="@style/text_18_black_28"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/is_public"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/sc_public"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />

    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_67"
              android:orientation="vertical">

    <include layout="@layout/layout_head"/>

    <com.flyco.roundview.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="@dimen/margin_12dp"
        android:layout_marginRight="@dimen/margin_12dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:rv_backgroundColor="@color/white"
        app:rv_cornerRadius="@dimen/j5dp">

        <RelativeLayout
            style="@style/margin_lr_12dp"
            android:layout_height="68dp">

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/length_88px"
                android:layout_height="@dimen/length_88px"
                android:layout_marginTop="@dimen/margin_12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_12dp"
                android:layout_toRightOf="@+id/iv_head"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="醋溜蛋"
                        android:textColor="@color/font_black_333"
                        android:textSize="@dimen/font_34px"/>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_merchant_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_12dp"
            android:gravity="center_horizontal"
            android:visibility="visible">
            <View
                style="@style/divider_1px"/>

            <ImageView
                android:id="@+id/iv_merchant_head"
                android:layout_width="@dimen/length_88px"
                android:layout_height="@dimen/length_88px"
                android:layout_marginTop="@dimen/margin_12dp"/>

            <TextView
                android:id="@+id/tv_merchant_name"
                style="@style/text_14_black_28"
                android:layout_marginTop="@dimen/margin_6dp"
                android:text=""/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_qr"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="@dimen/margin_12dp"/>
    </com.flyco.roundview.RoundLinearLayout>
</LinearLayout>
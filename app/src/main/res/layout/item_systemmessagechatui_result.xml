<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:background="@color/bg_f0">

	<TextView
		android:textColor="@color/font_black_46"
		android:textSize="16sp"
		android:gravity="center"
		android:layout_marginTop="10dp"
		android:id="@+id/tv_messagedate"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="2016-6-20"
		/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<ImageView
			android:id="@+id/head"
			android:layout_width="38dip"
			android:layout_height="38dip"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="12dp"
			android:layout_gravity="center_vertical"
			android:src="@mipmap/xiaofu_icon"/>


		<com.flyco.roundview.RoundLinearLayout
			android:orientation="vertical"
			android:layout_toRightOf="@+id/head"
			app:rv_backgroundColor="@color/white"
			app:rv_cornerRadius="5dp"
			app:rv_strokeColor="#e1e1e1"
			app:rv_strokeWidth="1px"
			android:layout_marginTop="12dp"
			android:layout_marginBottom="12dp"
			android:layout_marginLeft="12dp"
			android:layout_marginRight="50dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<LinearLayout
			android:background="@color/white"
			android:id="@+id/ll_hongbao"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<ImageView
				android:id="@+id/iv_icon"
				android:layout_margin="12dp"
				android:clickable="false"
				android:scaleType="centerCrop"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:src="@mipmap/chart_hongbao_icon"/>
			<TextView
				android:id="@+id/tv_messagetitle"
				android:clickable="false"
				android:layout_marginLeft="10dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingRight="5dp"
				android:layout_gravity="center_vertical"
				style="@style/text_15_black_28"
				android:text="您收到了红包" />

		</LinearLayout>

			<TextView
				android:layout_margin="12dp"
				android:id="@+id/tv_messagecontent"
				android:clickable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				style="@style/text_12_black_46"
				android:text="节日活动信息" />

			<TextView
				android:visibility="gone"
				android:layout_margin="12dp"
				android:id="@+id/tv_messageother"
				android:clickable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				style="@style/text_15_black_28"
				android:text="欢迎消息" />
		</com.flyco.roundview.RoundLinearLayout>

	</RelativeLayout>


</LinearLayout>
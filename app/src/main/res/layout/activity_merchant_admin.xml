<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f2"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/layout_head"/>

            <LinearLayout
                android:id="@+id/ll_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/ll_photo"
                    android:background="@drawable/ripple_item_clicked2"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_weight="1"
                        style="@style/text_15_black_28"
                        android:text="封面相册"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/right_btn"/>
                </LinearLayout>

                <View style="@style/divider"/>

                <LinearLayout
                    android:id="@+id/ll_merchant"
                    android:background="@drawable/ripple_item_clicked2"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_weight="1"
                        style="@style/text_15_black_28"
                        android:text="更多管家"/>

                    <android.support.v7.widget.RecyclerView
                        android:layout_toLeftOf="@+id/iv_right"
                        android:clickable="false"
                        android:id="@+id/recyclerview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>

                    <ImageView
                        android:id="@+id/iv_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/right_btn"/>
                </LinearLayout>
            </LinearLayout>


            <Button
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/btn_exit"
                android:layout_width="@dimen/common_btn_width_235"
                android:layout_height="@dimen/common_btn_height_35"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="@dimen/margin_12dp"
                android:background="@drawable/common_selector_btn"
                android:text="退出商户"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zemult.merchant.activity.search.SendLabelActivity">
    <include layout="@layout/layout_head" />



    <TextView
        android:id="@+id/tv_1"
        android:text="我想对TA说"
        android:layout_margin="@dimen/j10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_labeldestription"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="top|left"
        android:textColor="@color/font_black_666"
        android:text="我觉得你骨骼惊奇，身轻而气凝，必是百年一遇的奇才！特赠标签一枚，以资勉励！"
        android:maxLength="50"
        android:scrollHorizontally="true"
        android:padding="12dp"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_margin="@dimen/j10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标签："
        />

        <RadioButton
            android:button="@null"
            android:id="@+id/tv_labelname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="脑洞大开"
        />

    </LinearLayout>

    <Button
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="发送"
        android:id="@+id/btn_send"
        style="@style/btn_common_orange"
        android:layout_width="200dp"
        android:layout_height="35dp" />

</LinearLayout>

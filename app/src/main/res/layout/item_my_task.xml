<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:elevation="1px"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_12dp"
        android:background="@color/bg_f2" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_type_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:src="@mipmap/fengxiang_icon" />

        <TextView
            android:id="@+id/tv_task_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:layout_marginRight="@dimen/margin_12dp"
            android:layout_toRightOf="@+id/iv_type_icon"
            android:singleLine="true"
            android:text="关于......"
            android:textColor="@color/font_black_333"
            android:textSize="@dimen/font_30px" />

        <TextView
            android:id="@+id/tv_task_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_task_type"
            android:layout_below="@+id/tv_task_type"
            android:layout_marginRight="@dimen/margin_12dp"
            android:layout_marginTop="@dimen/margin_12dp"
            android:scrollbarSize="@dimen/j2dp"
            android:scrollbars="horizontal"
            android:singleLine="true"
            android:text="ddddddddddddddddddddd"
            android:textColor="@color/font_black_888"
            android:textSize="@dimen/font_28px" />
    </RelativeLayout>

    <com.flyco.roundview.RoundRelativeLayout
        android:id="@+id/rll_bonus"
        android:layout_width="match_parent"
        android:layout_height="@dimen/j56dp"
        android:layout_marginLeft="@dimen/margin_12dp"
        android:layout_marginRight="@dimen/margin_12dp"
        android:layout_marginTop="@dimen/margin_12dp"
        app:rv_backgroundColor="@color/white"
        app:rv_cornerRadius="5dp"
        app:rv_strokeColor="#e1e1e1"
        app:rv_strokeWidth="1px">

        <TextView
            android:id="@+id/tv_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/j30dp"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/exp_icon"
            android:text="ddd"
            android:textColor="@color/font_black_999"
            android:textSize="@dimen/font_24px" />

        <TextView
            android:id="@+id/tv_bonuses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/j30dp"
            android:layout_toRightOf="@+id/tv_exp"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/money_icon"
            android:text="@string/text_bonuses"
            android:textColor="@color/font_black_999"
            android:textSize="@dimen/font_24px" />

        <TextView
            android:id="@+id/tv_voucher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/j30dp"
            android:layout_toRightOf="@+id/tv_exp"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/daijingquan_icon"
            android:text="ddddd"
            android:textColor="@color/font_black_999"
            android:textSize="@dimen/font_24px" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/rtv_button"
            style="@style/round_button_main"
            android:layout_height="@dimen/j25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_12dp"
            android:text="@string/text_receive_task" />

    </com.flyco.roundview.RoundRelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_publish_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:src="@mipmap/fengxiang_icon" />

        <TextView
            android:id="@+id/tv_publish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:layout_marginRight="@dimen/margin_12dp"
            android:layout_toRightOf="@+id/iv_publish_icon"
            android:singleLine="true"
            android:text="关于......"
            android:textColor="@color/font_black_999"
            android:textSize="@dimen/font_24px" />

        <TextView
            android:id="@+id/tv_publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:layout_marginRight="@dimen/margin_12dp"
            android:layout_toRightOf="@+id/tv_publish_name"
            android:singleLine="true"
            android:text="13分钟前"
            android:textColor="@color/font_black_999"
            android:textSize="@dimen/font_24px" />
    </RelativeLayout>

    <View style="@style/divider_1px" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/layout_head"
        layout="@layout/layout_head" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="49dp"
        >

        <TextView
            android:id="@+id/info_type"
            style="@style/text_16_black_666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="交易" />

        <View
            android:layout_marginTop="15dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_c1"/>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_money"
            style="@style/text_16_black_666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="45sp"
            android:padding="20dp"
            android:layout_marginLeft="12dp"
            android:text="-" />


    </LinearLayout>
    <View
        style="@style/divider10dp"/>

    <!--交易对象-->
    <RelativeLayout
        android:id="@+id/rel_deal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="65dp">

        <TextView
            android:id="@+id/tv_lable4"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/text_16_black_666"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:text="交易对象" />


        <TextView
            android:layout_toRightOf="@+id/tv_lable4"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/tv_dealnote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_16_black_999"
            android:background="@null"
            android:text="-------"
            />

        <View
            android:layout_alignParentBottom="true"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_c1"/>
    </RelativeLayout>


    <!--订单号码-->
    <RelativeLayout
        android:id="@+id/rel_ordernumber"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="65dp">

        <TextView
            android:id="@+id/tv_lable5"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/text_16_black_666"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:text="订单号码" />


        <TextView
            android:layout_toRightOf="@+id/tv_lable5"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/tv_ordernote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_16_black_999"
            android:background="@null"
            android:text="-------"
            />

        <View
            android:layout_alignParentBottom="true"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_c1"/>
    </RelativeLayout>
    <!--创建时间-->
    <RelativeLayout
        android:id="@+id/rel_createtime"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="65dp">

        <TextView
            android:id="@+id/tv_lable3"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/text_16_black_666"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:text="创建时间" />


        <TextView
            android:layout_toRightOf="@+id/tv_lable3"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/tv_createtimenote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_16_black_999"
            android:background="@null"
            android:text="-------"
            />
    </RelativeLayout>



</LinearLayout>
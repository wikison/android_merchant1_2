<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/ll_root"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_f2"
              android:orientation="vertical">

    <include layout="@layout/layout_head"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/ripple_item_clicked2">

                <TextView
                    style="@style/detail_left"
                    android:layout_centerVertical="true"
                    android:text="预约状态"/>


                <TextView
                    android:id="@+id/tv_state"
                    style="@style/detail_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="------"/>
            </RelativeLayout>

            <View style="@style/divider12dp"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/ripple_item_clicked2">

                <TextView
                    android:id="@+id/object_tv"
                    style="@style/detail_left"
                    android:layout_centerVertical="true"
                    android:text="-------"/>

                <ImageView
                    android:id="@+id/head_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:layout_toLeftOf="@+id/name_tv"
                    android:src="@drawable/xml_circle_grey_bg"/>

                <TextView
                    android:id="@+id/name_tv"
                    style="@style/detail_right"
                    android:layout_alignParentRight="true"
                    android:text="------"/>

            </RelativeLayout>

            <View
                style="@style/view1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/ripple_item_clicked2">

                <TextView
                    style="@style/detail_left"
                    android:layout_centerVertical="true"
                    android:text="交易商户"/>


                <TextView
                    android:id="@+id/shop_tv"
                    style="@style/detail_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="------"/>
            </RelativeLayout>

            <View style="@style/divider12dp"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/ripple_item_clicked2">

                <TextView
                    style="@style/detail_left"
                    android:layout_centerVertical="true"
                    android:text="人数"/>


                <TextView
                    android:id="@+id/pernumber_tv"
                    style="@style/detail_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="------"/>
            </RelativeLayout>

            <View
                style="@style/view1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/ripple_item_clicked2">

                <TextView
                    style="@style/detail_left"
                    android:text="时间"/>


                <TextView
                    android:id="@+id/tv_time"
                    style="@style/detail_right"
                    android:layout_centerVertical="true"
                    android:text="------"/>
            </RelativeLayout>

            <View
                style="@style/view1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/ripple_item_clicked2">

                <TextView
                    style="@style/detail_left"
                    android:text="备注"/>


                <TextView
                    android:id="@+id/tv_extra"
                    style="@style/detail_right"
                    android:layout_centerVertical="true"
                    android:text="------"/>
            </RelativeLayout>

            <View
                style="@style/view1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/ripple_item_clicked2">

                <TextView
                    style="@style/detail_left"
                    android:text="联系人"/>


                <TextView
                    android:id="@+id/tv_contacter"
                    style="@style/detail_right"
                    android:layout_centerVertical="true"
                    android:text="------"/>
            </RelativeLayout>

            <View
                style="@style/view1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/ripple_item_clicked2">

                <TextView
                    style="@style/detail_left"
                    android:text="电话"/>


                <TextView
                    android:id="@+id/tv_phone"
                    style="@style/detail_right"
                    android:layout_centerVertical="true"
                    android:text="------"/>
            </RelativeLayout>

            <View style="@style/divider12dp"></View>

            <RelativeLayout
                android:id="@+id/yuyueresultcommit_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_item_clicked2"
                android:paddingBottom="30dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_lab1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:text="反馈结果:"/>

                <com.flyco.roundview.RoundRelativeLayout
                    android:id="@+id/appresultcommit_rrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_lab1"
                    android:layout_margin="20dp"
                    app:rv_backgroundColor="@color/white"
                    app:rv_cornerRadius="5dp"
                    app:rv_strokeColor="#e1e1e1"
                    app:rv_strokeWidth="1px">

                    <EditText
                        android:id="@+id/appresultcommit_et"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:maxLength="100"
                        android:hint="请填入预约号或包厢信息"/>

                </com.flyco.roundview.RoundRelativeLayout>

                <com.flyco.roundview.RoundTextView
                    android:id="@+id/btn_service"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_btn_height_35"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/appresultcommit_rrl"
                    android:layout_marginLeft="@dimen/j70dp"
                    android:layout_marginRight="@dimen/j70dp"
                    android:layout_marginTop="30dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="确认预约"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_36px"
                    app:rv_backgroundColor="@color/font_main"
                    app:rv_backgroundPressColor="@color/bg_ce"
                    app:rv_cornerRadius="18dp"
                    app:rv_strokeColor="@color/divider_dc"
                    app:rv_strokeWidth="1px"/>

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/others_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/yuyueresult_rl"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/ripple_item_clicked2"
                    android:visibility="gone">

                    <TextView
                        style="@style/detail_left"
                        android:text="预约结果"/>

                    <TextView
                        android:id="@+id/appresult_tv"
                        style="@style/detail_right"
                        android:layout_centerVertical="true"
                        android:text="------"/>
                </RelativeLayout>

                <View
                    android:id="@+id/v1"
                    style="@style/view1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"></View>

                <RelativeLayout
                    android:id="@+id/ordernum_rl"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/ripple_item_clicked2"
                    android:visibility="gone">

                    <TextView
                        style="@style/detail_left"
                        android:text="订单号"/>

                    <TextView
                        android:id="@+id/ordernum_tv"
                        style="@style/detail_right"
                        android:layout_centerVertical="true"
                        android:text="------"/>
                </RelativeLayout>

                <Button
                    android:id="@+id/lookorder_btn"
                    style="@style/common_btn_235"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="94dp"
                    android:layout_marginTop="22dp"
                    android:onClick="click"
                    android:text="查看消费单详情"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/dinghaole_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="订好咯,好友约起来~"
                    android:textColor="#e6bb7c"
                    android:textSize="15sp"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:id="@+id/ordersuccess_btn_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <Button
                            android:id="@+id/invite_btn"
                            style="@style/common_btn_235"
                            android:layout_width="130dp"
                            android:drawableLeft="@mipmap/fenxiang"
                            android:padding="8dp"
                            android:layout_marginBottom="@dimen/margin_12dp"
                            android:text="邀请好友"/>

                        <Button
                            android:id="@+id/jiezhang_btn"
                            style="@style/common_btn_235"
                            android:layout_width="128dp"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/invite_btn"
                            android:background="@drawable/detail_btn"
                            android:drawableLeft="@mipmap/complete"
                            android:layout_marginBottom="@dimen/margin_12dp"
                            android:padding="8dp"
                            android:text="快速结账"
                            android:textColor="#e6bb7c"/>

                        <TextView
                            android:id="@+id/hongbao_tv"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/red"
                            android:layout_marginTop="20dp"
                            android:layout_below="@+id/invite_btn"
                            android:text="觉得服务不错,给个赞赏红包吧"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
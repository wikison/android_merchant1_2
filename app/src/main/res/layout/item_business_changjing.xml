<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:clickable="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/ripple_item_clicked2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:gravity="center">
        <View
            android:layout_width="15dp"
            android:layout_height="1px"
            android:background="@color/divider_c1"/>

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/iv_changjing"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/merchant_online"
                android:background="@color/transparent"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_changjing_selected"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/check_btn_yes"/>
        </FrameLayout>



        <View
            android:layout_width="15dp"
            android:layout_height="1px"
            android:background="@color/divider_c1"/>

    </LinearLayout>


    <TextView
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:id="@+id/tv_changjing_distance"
       android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/font_black_888"
        android:text="0km"
        android:textSize="@dimen/font_28px"
        />
    <TextView
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:id="@+id/tv_changjing_name"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/font_black_333"
        android:textSize="@dimen/font_28px"
        />

</LinearLayout>

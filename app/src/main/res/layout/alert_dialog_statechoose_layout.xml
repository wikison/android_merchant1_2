<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/transparent"
              android:gravity="bottom"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_kongxian"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/ripple_item_clicked2">

        <TextView
            android:id="@+id/tv_kongxian"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_centerInParent="true"
            android:drawableLeft="@mipmap/kongxian_icon"
            android:drawablePadding="12dp"
            android:gravity="center"
            android:text="空闲"
            android:textColor="@color/font_idle"
            android:textSize="@dimen/font_30px"/>
    </RelativeLayout>

    <View style="@style/divider"/>

    <RelativeLayout
        android:id="@+id/rl_manglu"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/ripple_item_clicked2">

        <TextView
            android:id="@+id/tv_manglu"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_centerInParent="true"
            android:drawableLeft="@mipmap/manglu_icon"
            android:drawablePadding="12dp"
            android:gravity="center"
            android:text="忙碌"
            android:textColor="@color/font_busy"
            android:textSize="@dimen/font_30px"/>
    </RelativeLayout>

    <View style="@style/divider"/>

    <View
        style="@style/divider10dp"
        android:layout_height="12dp"/>

    <View style="@style/divider"/>

    <TextView
        android:id="@+id/tv_cancle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/ripple_item_clicked2"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/font_black_888"
        android:textSize="@dimen/font_30px"/>


</LinearLayout>
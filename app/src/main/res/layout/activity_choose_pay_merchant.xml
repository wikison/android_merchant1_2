<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_f2"
              android:orientation="vertical">

    <include layout="@layout/layout_head"/>

    <RelativeLayout
        android:id="@+id/rl_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/shenmedoumeiyou_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="什么都没有..."
            android:textColor="@color/font_black_666"
            android:textSize="@dimen/font_32px"/>

    </RelativeLayout>

    <com.zemult.merchant.view.BounceScrollView
        android:id="@+id/bsv_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.zemult.merchant.view.FixedListView
                android:id="@+id/flv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_16dp"
                android:divider="@color/bg_f2"
                android:dividerHeight="@dimen/margin_6dp"
                android:footerDividersEnabled="true">

            </com.zemult.merchant.view.FixedListView>
        </LinearLayout>
    </com.zemult.merchant.view.BounceScrollView>

</LinearLayout>
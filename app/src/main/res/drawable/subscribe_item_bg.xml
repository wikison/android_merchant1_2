<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_enabled="true" android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1.0dip" android:color="@color/font_black_999" android:dashWidth="4.0dip" android:dashGap="2.0dip" />
                    <solid android:color="@color/shopcircle_bg_color" />
                    <corners android:radius="50px"/>
                </shape>
            </item>
        </layer-list>
    </item>


    <item android:state_selected="true">
        <shape>
            <stroke android:width="1.0dip" android:color="#ffcc3131" />
            <solid android:color="@color/shopcircle_bg_color" />
            <corners android:radius="50px"/>
        </shape>
    </item>


    <item android:state_enabled="false">
        <shape>

            <solid android:color="@color/shopcircle_bg_color" />
            <corners android:radius="50px"/>
        </shape>
    </item>


    <item android:state_pressed="true">
        <shape>

            <solid android:color="@color/shopcircle_bg_color" />
            <corners android:radius="50px"/>
        </shape>
    </item>


    <item>
        <shape>

            <solid android:color="@color/shopcircle_bg_color" />
            <corners android:radius="50px"/>
        </shape>
    </item>
</selector>